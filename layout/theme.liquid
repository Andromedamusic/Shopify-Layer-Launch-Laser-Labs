<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#1a1a1a">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="dns-prefetch" href="https://www.google-analytics.com">
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.font_heading.system? and settings.font_body.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    {%- comment -%} Organization Schema {%- endcomment -%}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "{{ shop.name }}",
      "url": "{{ shop.url }}",
      "logo": "{{ shop.url }}{{ 'logo.png' | asset_url }}",
      "description": "{{ shop.description | strip_html | truncate: 250 }}",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "MI",
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "HunterBos@BosBusinessServices.org",
        "telephone": "+1-248-838-8314",
        "contactType": "customer service"
      },
      "sameAs": [
        "{{ settings.social_facebook }}",
        "{{ settings.social_instagram }}",
        "{{ settings.social_etsy }}",
        "{{ settings.social_linkedin }}"
      ]
    }
    </script>

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.font_body | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.font_body | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}

    {% style %}
      {{ settings.font_body | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {{ settings.font_heading | font_face: font_display: 'swap' }}

      :root {
        --font-body-family: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
        --font-body-style: {{ settings.font_body.style }};
        --font-body-weight: {{ settings.font_body.weight }};
        --font-heading-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
        --font-heading-style: {{ settings.font_heading.style }};
        --font-heading-weight: {{ settings.font_heading.weight }};

        --color-primary: {{ settings.color_primary }};
        --color-secondary: {{ settings.color_secondary }};
        --color-accent: {{ settings.color_accent }};
        --color-text: {{ settings.color_text }};
        --color-background: {{ settings.color_background }};
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        font-size: 62.5%;
        height: 100%;
      }

      body {
        min-height: 100%;
        margin: 0;
        font-size: 1.8rem;
        font-family: var(--font-body-family);
        font-style: var(--font-body-style);
        font-weight: var(--font-body-weight);
        color: var(--color-text);
        background-color: var(--color-background);
        line-height: 1.7;
      }

      p {
        font-size: 1.8rem;
        line-height: 1.7;
        margin: 0 0 1.5rem;
      }

      h1, h2, h3, h4, h5, h6, .h0, .h1, .h2, .h3, .h4, .h5, .h6 {
        font-family: var(--font-heading-family);
        font-style: var(--font-heading-style);
        font-weight: var(--font-heading-weight);
        line-height: 1.25;
        margin: 0 0 1rem;
      }

      .h0 { font-size: 4.4rem; }
      .h1, h1 { font-size: 3.6rem; }
      .h2, h2 { font-size: 3rem; }
      .h3, h3 { font-size: 2.4rem; }
      .h4, h4 { font-size: 2rem; }
      .h5, h5 { font-size: 1.8rem; }
      .h6, h6 { font-size: 1.6rem; }

      a {
        color: inherit;
      }

      img {
        max-width: 100%;
        height: auto;
      }

      .page-width {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
      }

      .button {
        display: inline-block;
        padding: 14px 28px;
        font-size: 1.6rem;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .button--primary {
        background-color: var(--color-primary);
        color: white;
      }

      .button--primary:hover {
        opacity: 0.9;
        transform: translateY(-1px);
      }

      .button--secondary {
        background-color: transparent;
        color: var(--color-primary);
        border: 2px solid var(--color-primary);
      }

      .button--secondary:hover {
        background-color: var(--color-primary);
        color: white;
      }

      @media (max-width: 749px) {
        body, p { font-size: 1.7rem; }
        .h0 { font-size: 3.2rem; }
        .h1, h1 { font-size: 2.8rem; }
        .h2, h2 { font-size: 2.4rem; }
        .h3, h3 { font-size: 2rem; }
        .button { padding: 12px 24px; font-size: 1.5rem; }
      }
    {% endstyle %}

    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'animations.css' | asset_url | stylesheet_tag }}
    {{ 'dark-mode.css' | asset_url | stylesheet_tag }}
    {{ 'print.css' | asset_url | stylesheet_tag: media: 'print' }}
  </head>

  <body class="template-{{ template.name }}">
    <a class="skip-to-content-link button" href="#MainContent">
      {{ "accessibility.skip_to_content" | t }}
    </a>

    {% section 'announcement-bar' %}
    {% section 'header' %}

    <main id="MainContent" class="main-content" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {%- comment -%} Inline Footer - bypasses section system for reliability {%- endcomment -%}
    <footer class="footer">
      <div class="footer__wrapper page-width">
        <div class="footer__grid">
          <div class="footer__brand">
            <a href="/" class="footer__logo">
              <span class="footer__logo-text">{{ shop.name }}</span>
            </a>
            <p class="footer__tagline">Premium custom engraved products, made to order in Michigan.</p>
            <div class="footer__social">
              {%- if settings.social_facebook_link != blank -%}
                <a href="{{ settings.social_facebook_link }}" class="footer__social-link" aria-label="Facebook">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
                </a>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <a href="{{ settings.social_instagram_link }}" class="footer__social-link" aria-label="Instagram">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
                </a>
              {%- endif -%}
            </div>
          </div>
          <div class="footer__menu">
            <h3 class="footer__menu-heading">Shop</h3>
            <ul class="footer__menu-list">
              <li class="footer__menu-item"><a href="/collections/all" class="footer__menu-link">All Products</a></li>
              <li class="footer__menu-item"><a href="/pages/design-library" class="footer__menu-link">Design Library</a></li>
              <li class="footer__menu-item"><a href="/pages/custom-upload" class="footer__menu-link">Custom Orders</a></li>
            </ul>
          </div>
          <div class="footer__menu">
            <h3 class="footer__menu-heading">Help</h3>
            <ul class="footer__menu-list">
              <li class="footer__menu-item"><a href="/pages/faq" class="footer__menu-link">FAQ</a></li>
              <li class="footer__menu-item"><a href="/pages/shipping" class="footer__menu-link">Shipping Info</a></li>
              <li class="footer__menu-item"><a href="/pages/contact" class="footer__menu-link">Contact Us</a></li>
            </ul>
          </div>
          <div class="footer__contact">
            <h3 class="footer__menu-heading">Contact</h3>
            <p class="footer__contact-item"><a href="mailto:HunterBos@BosBusinessServices.org">HunterBos@BosBusinessServices.org</a></p>
            <p class="footer__contact-item"><a href="tel:+12488388314">(248) 838-8314</a></p>
            <p class="footer__contact-item">Southeast Michigan</p>
          </div>
        </div>
        <div class="footer__bottom">
          <p class="footer__copyright">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
          <div class="footer__payment">{{ shop.enabled_payment_types | payment_type_svg_tag }}</div>
        </div>
      </div>
    </footer>
    <style>
      .footer{background:#f8f8f8;padding:70px 0 0;margin-top:auto}
      .footer__grid{display:grid;grid-template-columns:2fr 1fr 1fr 1fr;gap:3.5rem;padding-bottom:50px;border-bottom:1px solid #c5c5c5}
      @media(max-width:989px){.footer__grid{grid-template-columns:1fr 1fr}}
      @media(max-width:749px){.footer__grid{grid-template-columns:1fr;text-align:center}}
      .footer__logo{display:inline-block;text-decoration:none;margin-bottom:1.25rem}
      .footer__logo-text{font-size:2.2rem;font-weight:700;color:#1a1a1a}
      .footer__tagline{color:#555;font-size:1.6rem;margin-bottom:1.75rem;line-height:1.6}
      .footer__social{display:flex;gap:1rem}
      @media(max-width:749px){.footer__social{justify-content:center}}
      .footer__social-link{display:flex;align-items:center;justify-content:center;width:44px;height:44px;background:#1a1a1a;color:#fff;border-radius:50%;transition:all .2s}
      .footer__social-link:hover{opacity:.8;transform:translateY(-2px)}
      .footer__menu-heading{font-size:1.6rem;font-weight:700;margin-bottom:1.25rem;text-transform:uppercase;letter-spacing:.05em;color:#1a1a1a}
      .footer__menu-list{list-style:none;padding:0;margin:0}
      .footer__menu-item{margin-bottom:.75rem}
      .footer__menu-link,.footer__contact-item a{color:#4a4a4a;font-size:1.6rem;text-decoration:none;transition:color .2s}
      .footer__menu-link:hover,.footer__contact-item a:hover{color:#1a1a1a;text-decoration:underline}
      .footer__contact-item{color:#4a4a4a;font-size:1.6rem;margin-bottom:.75rem;line-height:1.5}
      .footer__bottom{display:flex;justify-content:space-between;align-items:center;padding:24px 0;flex-wrap:wrap;gap:1rem}
      @media(max-width:749px){.footer__bottom{flex-direction:column;text-align:center}}
      .footer__copyright{font-size:1.4rem;color:#595959;margin:0}
      .footer__payment svg{height:28px;width:auto;margin-left:10px}
    </style>

    {% section 'cart-drawer' %}
    {% render 'quick-view' %}
    {% render 'wishlist' %}
    {% render 'social-proof-popup' %}

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>
  </body>
</html>
