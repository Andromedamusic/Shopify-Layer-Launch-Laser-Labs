{%- comment -%}
  LayerLaunch Laser Lab - Contact Page Section
  A comprehensive, production-ready contact page with:
  - Hero section with trust signals
  - Native Shopify contact form
  - Contact info sidebar with social links
  - FAQ teaser section
{%- endcomment -%}

<div class="page-contact-wrapper">
  {%- comment -%} ========================================
     HERO SECTION
     ======================================== {%- endcomment -%}
  <section class="contact-hero" aria-labelledby="contact-hero-title">
    <div class="contact-hero__container page-width">
      {%- comment -%} Badge {%- endcomment -%}
      <div class="contact-hero__badge">
        <span class="contact-hero__badge-text">{{ section.settings.hero_badge | default: "Let's Connect" }}</span>
      </div>

      {%- comment -%} Main Heading {%- endcomment -%}
      <h1 id="contact-hero-title" class="contact-hero__title h1">
        {{ section.settings.hero_heading | default: "Ready to Bring Your Vision to Life?" }}
      </h1>

      {%- comment -%} Subtitle {%- endcomment -%}
      {% if section.settings.hero_subtitle != blank %}
        <p class="contact-hero__subtitle">
          {{ section.settings.hero_subtitle }}
        </p>
      {% endif %}

      {%- comment -%} Trust Signals Row {%- endcomment -%}
      <div class="contact-hero__trust-signals">
        <div class="trust-signal">
          <div class="trust-signal__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
          </div>
          <div class="trust-signal__content">
            <span class="trust-signal__value">{{ section.settings.trust_1_value | default: "24-Hour" }}</span>
            <span class="trust-signal__label">{{ section.settings.trust_1_label | default: "Response Time" }}</span>
          </div>
        </div>

        <div class="trust-signal__divider" aria-hidden="true"></div>

        <div class="trust-signal">
          <div class="trust-signal__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <polyline points="9 12 11 14 15 10"/>
            </svg>
          </div>
          <div class="trust-signal__content">
            <span class="trust-signal__value">{{ section.settings.trust_2_value | default: "Quality" }}</span>
            <span class="trust-signal__label">{{ section.settings.trust_2_label | default: "Guaranteed" }}</span>
          </div>
        </div>

        <div class="trust-signal__divider" aria-hidden="true"></div>

        <div class="trust-signal">
          <div class="trust-signal__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <div class="trust-signal__content">
            <span class="trust-signal__value">{{ section.settings.trust_3_value | default: "Michigan" }}</span>
            <span class="trust-signal__label">{{ section.settings.trust_3_label | default: "Made" }}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  {%- comment -%} ========================================
     MAIN CONTENT AREA
     ======================================== {%- endcomment -%}
  <section class="contact-main" aria-label="Contact form and information">
    <div class="contact-main__container page-width">
      <div class="contact-main__grid">

        {%- comment -%} ========================================
           CONTACT FORM COLUMN
           ======================================== {%- endcomment -%}
        <div class="contact-form-section">
          <div class="contact-form-section__header">
            <h2 class="contact-form-section__title">{{ section.settings.form_title | default: "Send Us a Message" }}</h2>
            <p class="contact-form-section__desc">{{ section.settings.form_description | default: "Have a question about custom orders, bulk pricing, or something else? We'd love to hear from you." }}</p>
          </div>

          {%- comment -%} Shopify Native Contact Form {%- endcomment -%}
          {% form 'contact', id: 'ContactForm', class: 'contact-form' %}

            {%- comment -%} Success Message {%- endcomment -%}
            {% if form.posted_successfully? %}
              <div class="contact-form__message contact-form__message--success" role="alert" aria-live="polite">
                <div class="contact-form__message-icon">
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                </div>
                <div class="contact-form__message-content">
                  <h3 class="contact-form__message-title">{{ section.settings.success_title | default: "Message Sent Successfully!" }}</h3>
                  <p class="contact-form__message-text">{{ section.settings.success_message | default: "Thank you for reaching out! We'll get back to you within 24 hours." }}</p>
                </div>
              </div>

            {% else %}

              {%- comment -%} Error Message {%- endcomment -%}
              {% if form.errors %}
                <div class="contact-form__message contact-form__message--error" role="alert" aria-live="assertive">
                  <div class="contact-form__message-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <circle cx="12" cy="12" r="10"/>
                      <line x1="12" y1="8" x2="12" y2="12"/>
                      <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                  </div>
                  <div class="contact-form__message-content">
                    <p class="contact-form__message-text">{{ form.errors | default_errors }}</p>
                  </div>
                </div>
              {% endif %}

              <div class="contact-form__fields">
                {%- comment -%} Name & Email Row {%- endcomment -%}
                <div class="contact-form__row contact-form__row--two-col">
                  <div class="contact-form__field">
                    <label for="ContactForm-name" class="contact-form__label">
                      {{ section.settings.label_name | default: "Your Name" }}
                      <span class="contact-form__required" aria-hidden="true">*</span>
                    </label>
                    <input
                      type="text"
                      id="ContactForm-name"
                      name="contact[{{ section.settings.label_name | default: 'Name' | handleize }}]"
                      class="contact-form__input"
                      autocomplete="name"
                      placeholder="{{ section.settings.placeholder_name | default: 'John Smith' }}"
                      required
                      aria-required="true"
                    >
                  </div>

                  <div class="contact-form__field">
                    <label for="ContactForm-email" class="contact-form__label">
                      {{ section.settings.label_email | default: "Email Address" }}
                      <span class="contact-form__required" aria-hidden="true">*</span>
                    </label>
                    <input
                      type="email"
                      id="ContactForm-email"
                      name="contact[email]"
                      class="contact-form__input"
                      autocomplete="email"
                      placeholder="{{ section.settings.placeholder_email | default: 'you@example.com' }}"
                      required
                      aria-required="true"
                    >
                  </div>
                </div>

                {%- comment -%} Phone (Optional) {%- endcomment -%}
                <div class="contact-form__field">
                  <label for="ContactForm-phone" class="contact-form__label">
                    {{ section.settings.label_phone | default: "Phone Number" }}
                    <span class="contact-form__optional">(optional)</span>
                  </label>
                  <input
                    type="tel"
                    id="ContactForm-phone"
                    name="contact[{{ section.settings.label_phone | default: 'Phone' | handleize }}]"
                    class="contact-form__input"
                    autocomplete="tel"
                    placeholder="{{ section.settings.placeholder_phone | default: '(248) 555-1234' }}"
                  >
                </div>

                {%- comment -%} Subject & Order Type Row {%- endcomment -%}
                <div class="contact-form__row contact-form__row--two-col">
                  <div class="contact-form__field">
                    <label for="ContactForm-subject" class="contact-form__label">
                      {{ section.settings.label_subject | default: "Subject" }}
                      <span class="contact-form__required" aria-hidden="true">*</span>
                    </label>
                    <select
                      id="ContactForm-subject"
                      name="contact[{{ section.settings.label_subject | default: 'Subject' | handleize }}]"
                      class="contact-form__select"
                      required
                      aria-required="true"
                    >
                      <option value="">Select a topic...</option>
                      <option value="Custom Order">Custom Order Inquiry</option>
                      <option value="Bulk/Corporate">Bulk or Corporate Order</option>
                      <option value="Design Help">Design Assistance</option>
                      <option value="Order Status">Order Status</option>
                      <option value="Returns">Returns or Issues</option>
                      <option value="Quote Request">Quote Request</option>
                      <option value="General Question">General Question</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>

                  <div class="contact-form__field">
                    <label for="ContactForm-order-type" class="contact-form__label">
                      {{ section.settings.label_order_type | default: "Order Type" }}
                      <span class="contact-form__required" aria-hidden="true">*</span>
                    </label>
                    <select
                      id="ContactForm-order-type"
                      name="contact[{{ section.settings.label_order_type | default: 'Order Type' | handleize }}]"
                      class="contact-form__select"
                      required
                      aria-required="true"
                    >
                      <option value="">Select order type...</option>
                      <option value="Retail">Retail (1-5 items)</option>
                      <option value="Bulk">Bulk (6-50 items)</option>
                      <option value="Corporate">Corporate (50+ items)</option>
                      <option value="Custom">Custom Project</option>
                      <option value="Other">Other / Not Sure</option>
                    </select>
                  </div>
                </div>

                {%- comment -%} Message Textarea {%- endcomment -%}
                <div class="contact-form__field">
                  <label for="ContactForm-message" class="contact-form__label">
                    {{ section.settings.label_message | default: "Your Message" }}
                    <span class="contact-form__required" aria-hidden="true">*</span>
                  </label>
                  <textarea
                    id="ContactForm-message"
                    name="contact[{{ section.settings.label_message | default: 'Message' | handleize }}]"
                    class="contact-form__textarea"
                    rows="6"
                    placeholder="{{ section.settings.placeholder_message | default: 'Tell us about your project, questions, or ideas...' }}"
                    required
                    aria-required="true"
                  ></textarea>
                </div>

                {%- comment -%} Submit Button {%- endcomment -%}
                <div class="contact-form__actions">
                  <button type="submit" class="contact-form__submit button button--primary">
                    <span class="contact-form__submit-text">{{ section.settings.button_text | default: "Send Message" }}</span>
                    <span class="contact-form__submit-loading" aria-hidden="true">
                      <svg class="contact-form__spinner" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
                        <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"/>
                      </svg>
                      Sending...
                    </span>
                  </button>
                  <p class="contact-form__privacy-note">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                    </svg>
                    Your information is secure and will never be shared.
                  </p>
                </div>
              </div>

            {% endif %}
          {% endform %}
        </div>

        {%- comment -%} ========================================
           CONTACT INFO SIDEBAR
           ======================================== {%- endcomment -%}
        <aside class="contact-sidebar" aria-label="Contact information">
          <div class="contact-sidebar__inner">

            {%- comment -%} Contact Details Card {%- endcomment -%}
            <div class="contact-card">
              <h2 class="contact-card__title">{{ section.settings.sidebar_title | default: "Contact Information" }}</h2>

              <div class="contact-card__items">
                {%- comment -%} Email {%- endcomment -%}
                {% if section.settings.email != blank %}
                  <div class="contact-card__item">
                    <div class="contact-card__icon" aria-hidden="true">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                        <polyline points="22,6 12,13 2,6"/>
                      </svg>
                    </div>
                    <div class="contact-card__content">
                      <h3 class="contact-card__label">Email</h3>
                      <a href="mailto:{{ section.settings.email }}" class="contact-card__link contact-card__link--email">
                        {{ section.settings.email }}
                      </a>
                    </div>
                  </div>
                {% endif %}

                {%- comment -%} Phone {%- endcomment -%}
                {% if section.settings.phone != blank %}
                  <div class="contact-card__item">
                    <div class="contact-card__icon" aria-hidden="true">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                      </svg>
                    </div>
                    <div class="contact-card__content">
                      <h3 class="contact-card__label">Phone</h3>
                      <a href="tel:{{ section.settings.phone | remove: '(' | remove: ')' | remove: '-' | remove: ' ' }}" class="contact-card__link contact-card__link--phone">
                        {{ section.settings.phone }}
                      </a>
                    </div>
                  </div>
                {% endif %}

                {%- comment -%} Location {%- endcomment -%}
                {% if section.settings.location != blank %}
                  <div class="contact-card__item">
                    <div class="contact-card__icon" aria-hidden="true">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                        <circle cx="12" cy="10" r="3"/>
                      </svg>
                    </div>
                    <div class="contact-card__content">
                      <h3 class="contact-card__label">Location</h3>
                      <p class="contact-card__text">{{ section.settings.location }}</p>
                    </div>
                  </div>
                {% endif %}

                {%- comment -%} Hours/Availability {%- endcomment -%}
                {% if section.settings.hours != blank %}
                  <div class="contact-card__item">
                    <div class="contact-card__icon" aria-hidden="true">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12 6 12 12 16 14"/>
                      </svg>
                    </div>
                    <div class="contact-card__content">
                      <h3 class="contact-card__label">Availability</h3>
                      <p class="contact-card__text">{{ section.settings.hours }}</p>
                    </div>
                  </div>
                {% endif %}
              </div>

              {%- comment -%} 24-Hour Response Badge {%- endcomment -%}
              <div class="contact-card__response-badge">
                <div class="response-badge">
                  <div class="response-badge__icon" aria-hidden="true">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                      <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                  </div>
                  <p class="response-badge__text">
                    We typically respond within <strong>24 hours</strong>
                  </p>
                </div>
              </div>
            </div>

            {%- comment -%} Social Links Card {%- endcomment -%}
            {% if section.settings.facebook_url != blank or section.settings.instagram_url != blank or section.settings.etsy_url != blank %}
              <div class="contact-social">
                <h3 class="contact-social__title">{{ section.settings.social_title | default: "Connect With Us" }}</h3>
                <div class="contact-social__links">
                  {% if section.settings.facebook_url != blank %}
                    <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" class="contact-social__link contact-social__link--facebook" aria-label="Follow us on Facebook">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                      </svg>
                      <span class="contact-social__link-text">Facebook</span>
                    </a>
                  {% endif %}

                  {% if section.settings.instagram_url != blank %}
                    <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="contact-social__link contact-social__link--instagram" aria-label="Follow us on Instagram">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                      </svg>
                      <span class="contact-social__link-text">Instagram</span>
                    </a>
                  {% endif %}

                  {% if section.settings.etsy_url != blank %}
                    <a href="{{ section.settings.etsy_url }}" target="_blank" rel="noopener noreferrer" class="contact-social__link contact-social__link--etsy" aria-label="Visit our Etsy shop">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M8.4 3.9c-.4 0-.7.3-.7.7v16.8c0 .4.3.7.7.7h.9c.4 0 .7-.3.7-.7V4.6c0-.4-.3-.7-.7-.7h-.9zm5.8 3.5c-.4 0-.7.3-.7.7v13.3c0 .4.3.7.7.7h.9c.4 0 .7-.3.7-.7V8.1c0-.4-.3-.7-.7-.7h-.9z"/>
                        <path d="M5.6 8.1c-.4 0-.7.3-.7.7v.9c0 .4.3.7.7.7h12.8c.4 0 .7-.3.7-.7v-.9c0-.4-.3-.7-.7-.7H5.6zm0 5.6c-.4 0-.7.3-.7.7v.9c0 .4.3.7.7.7h12.8c.4 0 .7-.3.7-.7v-.9c0-.4-.3-.7-.7-.7H5.6z"/>
                      </svg>
                      <span class="contact-social__link-text">Etsy</span>
                    </a>
                  {% endif %}
                </div>

                {%- comment -%} Review Badge {%- endcomment -%}
                {% if section.settings.show_review_badge %}
                  <div class="contact-social__review-badge">
                    <div class="review-badge">
                      <div class="review-badge__stars" aria-label="5 star rating">
                        {% for i in (1..5) %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="#c9a227" aria-hidden="true">
                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                          </svg>
                        {% endfor %}
                      </div>
                      <p class="review-badge__text">{{ section.settings.review_text | default: "5 Stars on Facebook Marketplace" }}</p>
                    </div>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </aside>
      </div>
    </div>
  </section>

  {%- comment -%} ========================================
     FAQ TEASER SECTION
     ======================================== {%- endcomment -%}
  <section class="contact-faq" aria-labelledby="faq-teaser-title">
    <div class="contact-faq__container page-width">
      <div class="contact-faq__header">
        <h2 id="faq-teaser-title" class="contact-faq__title">{{ section.settings.faq_title | default: "Frequently Asked Questions" }}</h2>
        <p class="contact-faq__subtitle">{{ section.settings.faq_subtitle | default: "Find quick answers to common questions about our products and services." }}</p>
      </div>

      <div class="contact-faq__questions">
        {%- comment -%} FAQ Item 1 {%- endcomment -%}
        <div class="faq-item">
          <div class="faq-item__icon" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="faq-item__content">
            <h3 class="faq-item__question">{{ section.settings.faq_1_question | default: "What materials can you engrave?" }}</h3>
            <p class="faq-item__answer">{{ section.settings.faq_1_answer | default: "We work with wood, acrylic, leather, glass, slate, metal, and more. Each material creates unique effects perfect for different applications." }}</p>
          </div>
        </div>

        {%- comment -%} FAQ Item 2 {%- endcomment -%}
        <div class="faq-item">
          <div class="faq-item__icon" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="faq-item__content">
            <h3 class="faq-item__question">{{ section.settings.faq_2_question | default: "How long does a custom order take?" }}</h3>
            <p class="faq-item__answer">{{ section.settings.faq_2_answer | default: "Most custom orders are completed within 3-5 business days. Rush orders may be available - just ask when you contact us!" }}</p>
          </div>
        </div>

        {%- comment -%} FAQ Item 3 {%- endcomment -%}
        <div class="faq-item">
          <div class="faq-item__icon" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="faq-item__content">
            <h3 class="faq-item__question">{{ section.settings.faq_3_question | default: "Do you offer bulk or corporate discounts?" }}</h3>
            <p class="faq-item__answer">{{ section.settings.faq_3_answer | default: "Yes! We offer tiered pricing for bulk orders and special rates for corporate clients. Contact us for a custom quote." }}</p>
          </div>
        </div>
      </div>

      <div class="contact-faq__cta">
        <a href="{{ section.settings.faq_link | default: '/pages/faq' }}" class="contact-faq__button button button--secondary">
          <span>{{ section.settings.faq_button_text | default: "View All FAQs" }}</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
