<div class="collections-list page-width">
  <h1 class="collections-list__title h1">Collections</h1>

  <div class="collections-list__grid">
    {%- for collection in collections -%}
      {%- unless collection.handle == 'all' -%}
        <a href="{{ collection.url }}" class="collection-card">
          <div class="collection-card__image">
            {%- if collection.featured_image -%}
              {{ collection.featured_image | image_url: width: 500 | image_tag:
                loading: 'lazy',
                alt: collection.title
              }}
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <h2 class="collection-card__title h3">{{ collection.title }}</h2>
          <p class="collection-card__count">{{ collection.products_count }} products</p>
        </a>
      {%- endunless -%}
    {%- endfor -%}
  </div>
</div>

<style>
  .collections-list {
    padding: 40px 0 80px;
  }

  .collections-list__title {
    margin-bottom: 2rem;
  }

  .collections-list__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 989px) {
    .collections-list__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 749px) {
    .collections-list__grid {
      grid-template-columns: 1fr;
    }
  }

  .collection-card {
    text-decoration: none;
    color: inherit;
  }

  .collection-card__image {
    aspect-ratio: 4/3;
    overflow: hidden;
    border-radius: 8px;
    background: #f5f5f5;
    margin-bottom: 1rem;
  }

  .collection-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .collection-card:hover .collection-card__image img {
    transform: scale(1.05);
  }

  .collection-card__title {
    margin: 0 0 0.25rem;
  }

  .collection-card__count {
    color: rgba(0,0,0,0.5);
    font-size: 1.4rem;
    margin: 0;
  }
</style>

{% schema %}
{
  "name": "Collections List",
  "tag": "section",
  "class": "section-collections-list"
}
{% endschema %}
