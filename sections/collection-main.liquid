{%- comment -%}
  Main Collection Section
  Displays collection products with filtering and sorting
{%- endcomment -%}

<div class="collection-main page-width section-{{ section.id }}-padding">
  {%- comment -%} Collection Header {%- endcomment -%}
  <div class="collection-main__header">
    <h1 class="collection-main__title h1">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-main__description">{{ collection.description }}</div>
    {% endif %}
  </div>

  {%- comment -%} Toolbar {%- endcomment -%}
  <div class="collection-main__toolbar">
    <div class="collection-main__count">
      {{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}
    </div>

    <div class="collection-main__sort">
      <label for="sort-by">Sort by:</label>
      <select id="sort-by" class="collection-sort-select">
        <option value="manual" {% if collection.sort_by == 'manual' %}selected{% endif %}>Featured</option>
        <option value="best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>Best Selling</option>
        <option value="title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>A-Z</option>
        <option value="title-descending" {% if collection.sort_by == 'title-descending' %}selected{% endif %}>Z-A</option>
        <option value="price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>Price: Low to High</option>
        <option value="price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>Price: High to Low</option>
        <option value="created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>Newest</option>
      </select>
    </div>
  </div>

  {%- comment -%} Product Grid {%- endcomment -%}
  {% paginate collection.products by 24 %}
    {% if collection.products.size > 0 %}
      <div class="collection-main__grid">
        {% for product in collection.products %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {% if product.featured_image != blank %}
                  {{ product.featured_image | image_url: width: 500 | image_tag:
                    loading: 'lazy',
                    class: 'product-card__image',
                    alt: product.featured_image.alt | default: product.title
                  }}
                  {% if product.images.size > 1 %}
                    {{ product.images[1] | image_url: width: 500 | image_tag:
                      loading: 'lazy',
                      class: 'product-card__image product-card__image--hover',
                      alt: product.images[1].alt | default: product.title
                    }}
                  {% endif %}
                {% else %}
                  <div class="product-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  <span class="product-card__badge product-card__badge--sale">Sale</span>
                {% elsif product.tags contains 'new' %}
                  <span class="product-card__badge product-card__badge--new">New</span>
                {% endif %}

                {% unless product.available %}
                  <span class="product-card__badge product-card__badge--soldout">Sold Out</span>
                {% endunless %}
              </div>

              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>

                {% if section.settings.show_vendor and product.vendor != blank %}
                  <p class="product-card__vendor">{{ product.vendor }}</p>
                {% endif %}

                <div class="product-card__price">
                  {% if product.compare_at_price > product.price %}
                    <span class="product-card__price-compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="product-card__price-current {% if product.compare_at_price > product.price %}sale{% endif %}">
                    {{ product.price | money }}
                  </span>
                </div>

                {% if product.metafields.custom.personalization_available %}
                  <span class="product-card__personalization">âœ“ Personalization Available</span>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      {%- comment -%} Pagination {%- endcomment -%}
      {% if paginate.pages > 1 %}
        <div class="collection-main__pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    {% else %}
    <div class="collection-main__empty">
      <p>No products found in this collection.</p>
      <a href="/collections/all" class="button button--primary">View All Products</a>
    </div>
  {% endif %}
  {% endpaginate %}

  {%- comment -%} Bulk Order CTA {%- endcomment -%}
  {% if section.settings.show_bulk_cta %}
    <div class="collection-main__bulk-cta">
      <div class="bulk-cta-banner">
        <div class="bulk-cta-banner__content">
          <h3>Need Bulk Orders or Custom Work?</h3>
          <p>We offer volume pricing on orders of 25+ items, plus custom design services for businesses and events.</p>
        </div>
        <a href="/pages/request-quote" class="button button--secondary">Request a Quote</a>
      </div>
    </div>
  {% endif %}
</div>

<style>
  .collection-main {
    padding: 40px 0 80px;
  }
  .collection-main__header {
    text-align: center;
    margin-bottom: 2rem;
  }
  .collection-main__title {
    margin-bottom: 0.75rem;
  }
  .collection-main__description {
    color: rgba(0,0,0,0.6);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Toolbar */
  .collection-main__toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .collection-main__count {
    font-size: 0.9rem;
    color: rgba(0,0,0,0.5);
  }
  .collection-main__sort {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }
  .collection-sort-select {
    padding: 0.5rem 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.9rem;
    cursor: pointer;
  }

  /* Product Grid */
  .collection-main__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  @media (max-width: 989px) {
    .collection-main__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }
  @media (max-width: 749px) {
    .collection-main__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  /* Product Card */
  .product-card__link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .product-card__image-wrapper {
    position: relative;
    aspect-ratio: 1;
    background: #f8f8f8;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
  }
  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s;
  }
  .product-card__image--hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  .product-card:hover .product-card__image--hover {
    opacity: 1;
  }
  .product-card:hover .product-card__image:not(.product-card__image--hover) {
    opacity: 0;
  }
  .product-card__badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.25rem 0.75rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 4px;
    letter-spacing: 0.05em;
  }
  .product-card__badge--sale {
    background: #c62828;
    color: white;
  }
  .product-card__badge--new {
    background: #c9a227;
    color: white;
  }
  .product-card__badge--soldout {
    background: #666;
    color: white;
  }
  .product-card__info {
    text-align: left;
  }
  .product-card__title {
    font-size: 1rem;
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }
  .product-card__vendor {
    font-size: 0.8rem;
    color: rgba(0,0,0,0.5);
    margin: 0 0 0.25rem 0;
  }
  .product-card__price {
    font-size: 0.95rem;
  }
  .product-card__price-compare {
    color: rgba(0,0,0,0.4);
    text-decoration: line-through;
    margin-right: 0.5rem;
  }
  .product-card__price-current {
    font-weight: 500;
  }
  .product-card__price-current.sale {
    color: #c62828;
  }
  .product-card__personalization {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: #2e7d32;
  }

  /* Pagination */
  .collection-main__pagination {
    margin-top: 3rem;
    display: flex;
    justify-content: center;
  }

  /* Empty State */
  .collection-main__empty {
    text-align: center;
    padding: 4rem 0;
  }
  .collection-main__empty p {
    color: rgba(0,0,0,0.5);
    margin-bottom: 1.5rem;
  }

  /* Bulk CTA Banner */
  .collection-main__bulk-cta {
    margin-top: 4rem;
  }
  .bulk-cta-banner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 2rem;
    background: linear-gradient(135deg, #f8f8f8 0%, #eee 100%);
    border-radius: 12px;
  }
  @media (max-width: 749px) {
    .bulk-cta-banner {
      flex-direction: column;
      text-align: center;
    }
  }
  .bulk-cta-banner__content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
  }
  .bulk-cta-banner__content p {
    margin: 0;
    color: rgba(0,0,0,0.6);
    font-size: 0.95rem;
  }
</style>

<script>
  // Sort functionality
  document.querySelector('.collection-sort-select').addEventListener('change', function() {
    const url = new URL(window.location.href);
    url.searchParams.set('sort_by', this.value);
    window.location.href = url.toString();
  });
</script>

{% schema %}
{
  "name": "Collection Main",
  "tag": "section",
  "class": "section-collection-main",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Product Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bulk_cta",
      "label": "Show Bulk Order CTA Banner",
      "default": true
    }
  ]
}
{% endschema %}
