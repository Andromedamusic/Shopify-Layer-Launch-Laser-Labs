{%- comment -%} Contact Social Proof Section - Facebook badge, stats, testimonials {%- endcomment -%}
<div class="contact-social-proof section-{{ section.id }}-padding">
  <div class="contact-social-proof__wrapper page-width">
    {% if section.settings.heading != blank %}
      <div class="contact-social-proof__header">
        <h2 class="contact-social-proof__heading h2">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="contact-social-proof__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="contact-social-proof__grid">
      {%- comment -%} Facebook Marketplace Badge {%- endcomment -%}
      <div class="contact-social-proof__card contact-social-proof__card--facebook">
        <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="facebook-badge">
          <div class="facebook-badge__header">
            <div class="facebook-badge__logo">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="#1877F2"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </div>
            <div class="facebook-badge__title">
              <span class="facebook-badge__platform">Facebook Marketplace</span>
              <span class="facebook-badge__verified">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="#1877F2"><circle cx="12" cy="12" r="10" fill="#1877F2"/><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="white"/></svg>
                Verified Seller
              </span>
            </div>
          </div>
          <div class="facebook-badge__rating">
            <div class="facebook-badge__stars">
              {% for i in (1..5) %}<svg width="24" height="24" viewBox="0 0 24 24" fill="#c9a227"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>{% endfor %}
            </div>
            <span class="facebook-badge__score">5.0</span>
          </div>
          <p class="facebook-badge__count">{{ section.settings.review_count }}</p>
          <span class="facebook-badge__cta">View Reviews <span>&rarr;</span></span>
        </a>
      </div>

      {%- comment -%} Trust Statistics {%- endcomment -%}
      <div class="contact-social-proof__card contact-social-proof__card--stats">
        <h3 class="stats-card__title">Why Customers Trust Us</h3>
        <div class="stats-card__grid">
          <div class="stats-card__item">
            <span class="stats-card__number">{{ section.settings.stat_customers }}</span>
            <span class="stats-card__label">Happy Customers</span>
          </div>
          <div class="stats-card__item">
            <span class="stats-card__number">{{ section.settings.stat_rating }}<span class="stats-card__star">â˜…</span></span>
            <span class="stats-card__label">Average Rating</span>
          </div>
          <div class="stats-card__item">
            <span class="stats-card__number">{{ section.settings.stat_recommend }}</span>
            <span class="stats-card__label">Would Recommend</span>
          </div>
        </div>
      </div>
    </div>

    {%- comment -%} Mini Testimonials {%- endcomment -%}
    {% if section.blocks.size > 0 %}
      <div class="contact-social-proof__testimonials">
        {% for block in section.blocks %}
          <div class="mini-testimonial" {{ block.shopify_attributes }}>
            <div class="mini-testimonial__stars">
              {% for i in (1..5) %}
                {% if i <= block.settings.rating %}<svg width="16" height="16" viewBox="0 0 24 24" fill="#c9a227"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>{% else %}<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#c9a227" stroke-width="2"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>{% endif %}
              {% endfor %}
            </div>
            <blockquote class="mini-testimonial__quote">"{{ block.settings.quote }}"</blockquote>
            <div class="mini-testimonial__attribution">
              <span class="mini-testimonial__author">{{ block.settings.author }}</span>
              {% if block.settings.location != blank %}<span class="mini-testimonial__location">{{ block.settings.location }}</span>{% endif %}
              {% if block.settings.source != blank %}<span class="mini-testimonial__source">via {{ block.settings.source }}</span>{% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
.contact-social-proof { padding: clamp(40px, 6vw, 70px) 0; background: linear-gradient(180deg, #f8f8f8 0%, #fff 100%); }
.contact-social-proof__header { text-align: center; margin-bottom: clamp(2rem, 3vw, 3rem); }
.contact-social-proof__heading { font-size: clamp(2rem, 2.5vw, 2.8rem); font-weight: 700; color: #1a1a1a; margin-bottom: 0.5rem; }
.contact-social-proof__subheading { font-size: clamp(1.4rem, 1.1vw, 1.6rem); color: #555; max-width: 500px; margin: 0 auto; }
.contact-social-proof__grid { display: grid; grid-template-columns: 1fr 1.2fr; gap: clamp(1.5rem, 2.5vw, 2.5rem); margin-bottom: clamp(2rem, 3vw, 3rem); }
@media (max-width: 849px) { .contact-social-proof__grid { grid-template-columns: 1fr; } }
.contact-social-proof__card { background: #fff; border-radius: clamp(12px, 1vw, 16px); padding: clamp(1.5rem, 2.5vw, 2.5rem); box-shadow: 0 4px 20px rgba(0,0,0,0.06), 0 1px 3px rgba(0,0,0,0.04); transition: transform 0.3s, box-shadow 0.3s; }
.contact-social-proof__card:hover { transform: translateY(-3px); box-shadow: 0 8px 30px rgba(0,0,0,0.1); }
.facebook-badge { display: block; text-decoration: none; color: inherit; }
.facebook-badge__header { display: flex; align-items: center; gap: 1rem; margin-bottom: 1.25rem; }
.facebook-badge__logo { width: 48px; height: 48px; background: #e7f3ff; border-radius: 12px; display: flex; align-items: center; justify-content: center; }
.facebook-badge__title { display: flex; flex-direction: column; }
.facebook-badge__platform { font-size: clamp(1.4rem, 1.1vw, 1.6rem); font-weight: 700; color: #1a1a1a; }
.facebook-badge__verified { display: inline-flex; align-items: center; gap: 4px; font-size: clamp(1.2rem, 0.9vw, 1.3rem); color: #1877F2; font-weight: 500; }
.facebook-badge__rating { display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem; }
.facebook-badge__stars { display: flex; gap: 2px; }
.facebook-badge__stars svg { filter: drop-shadow(0 1px 2px rgba(201,162,39,0.3)); }
.facebook-badge__score { font-size: clamp(2rem, 1.8vw, 2.4rem); font-weight: 800; color: #1a1a1a; }
.facebook-badge__count { font-size: clamp(1.3rem, 1vw, 1.5rem); color: #666; margin: 0 0 1rem; }
.facebook-badge__cta { display: inline-flex; align-items: center; gap: 6px; font-size: clamp(1.3rem, 1vw, 1.4rem); font-weight: 600; color: #1877F2; }
.facebook-badge:hover .facebook-badge__cta span { transform: translateX(4px); display: inline-block; transition: transform 0.2s; }
.stats-card__title { font-size: clamp(1.4rem, 1.1vw, 1.6rem); font-weight: 600; color: #1a1a1a; margin: 0 0 1.5rem; text-align: center; }
.stats-card__grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; text-align: center; }
.stats-card__item { padding: clamp(1rem, 1.5vw, 1.5rem); background: #f8f8f8; border-radius: 10px; }
.stats-card__number { display: block; font-size: clamp(1.8rem, 2vw, 2.4rem); font-weight: 800; color: #1a1a1a; line-height: 1.2; }
.stats-card__star { color: #c9a227; margin-left: 2px; }
.stats-card__label { display: block; font-size: clamp(1.1rem, 0.85vw, 1.25rem); color: #666; font-weight: 500; margin-top: 4px; }
@media (max-width: 549px) { .stats-card__grid { grid-template-columns: 1fr; gap: 0.75rem; } .stats-card__item { display: flex; align-items: center; justify-content: center; gap: 0.75rem; padding: 1rem; } .stats-card__number { font-size: 1.6rem; } .stats-card__label { margin-top: 0; } }
.contact-social-proof__testimonials { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: clamp(1rem, 1.5vw, 1.5rem); }
.mini-testimonial { background: #fff; border-radius: clamp(10px, 0.8vw, 12px); padding: clamp(1.25rem, 2vw, 1.75rem); box-shadow: 0 2px 12px rgba(0,0,0,0.05); border-left: 3px solid #c9a227; transition: transform 0.2s, box-shadow 0.2s; }
.mini-testimonial:hover { transform: translateY(-2px); box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
.mini-testimonial__stars { display: flex; gap: 2px; margin-bottom: 0.75rem; }
.mini-testimonial__quote { font-size: clamp(1.3rem, 1vw, 1.5rem); line-height: 1.6; color: #333; font-style: italic; margin: 0 0 1rem; }
.mini-testimonial__attribution { display: flex; flex-wrap: wrap; align-items: center; gap: 0.5rem; font-size: clamp(1.2rem, 0.9vw, 1.3rem); }
.mini-testimonial__author { font-weight: 600; color: #1a1a1a; }
.mini-testimonial__location { color: #666; }
.mini-testimonial__location::before { content: '\2022'; margin-right: 0.5rem; color: #999; }
.mini-testimonial__source { color: #c9a227; font-weight: 500; }
@media (min-width: 1440px) { .contact-social-proof__wrapper { max-width: 1100px; margin: 0 auto; } }
</style>

{% schema %}
{
  "name": "Contact Social Proof",
  "tag": "section",
  "class": "section-contact-social-proof",
  "max_blocks": 4,
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Trusted by Hundreds of Customers" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "See what people are saying about our work" },
    { "type": "header", "content": "Facebook Marketplace" },
    { "type": "url", "id": "facebook_url", "label": "Facebook Profile URL", "default": "https://www.facebook.com/marketplace/profile/100003393673828/" },
    { "type": "text", "id": "review_count", "label": "Review Count Text", "default": "15+ verified reviews" },
    { "type": "header", "content": "Trust Statistics" },
    { "type": "text", "id": "stat_customers", "label": "Customer Count", "default": "Growing" },
    { "type": "text", "id": "stat_rating", "label": "Average Rating", "default": "5.0" },
    { "type": "text", "id": "stat_recommend", "label": "Would Recommend", "default": "100%" }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial Quote",
      "settings": [
        { "type": "range", "id": "rating", "label": "Star Rating", "min": 1, "max": 5, "step": 1, "default": 5 },
        { "type": "textarea", "id": "quote", "label": "Quote", "default": "Absolutely beautiful work! The engraving was exactly what I wanted." },
        { "type": "text", "id": "author", "label": "Customer Name", "default": "Sarah M." },
        { "type": "text", "id": "location", "label": "Location", "default": "Michigan" },
        { "type": "select", "id": "source", "label": "Review Source", "options": [{ "value": "", "label": "None" }, { "value": "Facebook", "label": "Facebook" }, { "value": "Etsy", "label": "Etsy" }, { "value": "Google", "label": "Google" }], "default": "Facebook" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Social Proof",
      "settings": {
        "heading": "See Our Reviews",
        "subheading": "Check out our Facebook Marketplace reviews",
        "facebook_url": "https://www.facebook.com/marketplace/profile/100003393673828/",
        "review_count": "15+ verified reviews",
        "stat_customers": "Growing",
        "stat_rating": "5.0",
        "stat_recommend": "100%"
      },
      "blocks": []
    }
  ],
  "templates": ["page"]
}
{% endschema %}
