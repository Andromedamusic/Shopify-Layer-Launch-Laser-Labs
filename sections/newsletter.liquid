<div class="newsletter section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }};">
  <div class="newsletter__wrapper page-width">
    <div class="newsletter__content">
      {% if section.settings.heading != blank %}
        <h2 class="newsletter__heading h3">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="newsletter__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="newsletter__form-wrapper">
      {% form 'customer', class: 'newsletter__form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter__field-wrapper">
          <input
            type="email"
            name="contact[email]"
            class="newsletter__input"
            placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
            required
            autocomplete="email"
            aria-label="Email address"
          >
          <button type="submit" class="newsletter__button button button--primary">
            {{ section.settings.button_label | default: 'Subscribe' }}
          </button>
        </div>
        {% if form.posted_successfully? %}
          <p class="newsletter__success">{{ section.settings.success_message | default: 'Thanks for subscribing!' }}</p>
        {% endif %}
        {% if form.errors %}
          <p class="newsletter__error">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</p>
        {% endif %}
      {% endform %}

      {% if section.settings.incentive != blank %}
        <p class="newsletter__incentive">{{ section.settings.incentive }}</p>
      {% endif %}

      {% if section.settings.privacy_text != blank %}
        <p class="newsletter__privacy">{{ section.settings.privacy_text }}</p>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .newsletter {
    padding: clamp(60px, 8vw, 100px) 0;
    /* White background with top border to differentiate from footer */
    background: #ffffff !important;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }
  .newsletter__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: clamp(2rem, 4vw, 5rem);
  }
  @media (max-width: 989px) {
    .newsletter__wrapper {
      flex-direction: column;
      text-align: center;
    }
  }
  .newsletter__content {
    flex: 1;
    max-width: 500px;
  }
  .newsletter__heading {
    margin-bottom: clamp(0.5rem, 1vw, 1rem);
    font-size: clamp(2.2rem, 2.5vw, 3rem);
    font-weight: 700;
    color: #1a1a1a;
  }
  .newsletter__description {
    color: rgba(0,0,0,0.7);
    margin: 0;
    font-size: clamp(1.5rem, 1.2vw, 1.8rem);
    line-height: 1.6;
  }
  .newsletter__form-wrapper {
    flex: 1;
    max-width: 500px;
    width: 100%;
  }
  .newsletter__field-wrapper {
    display: flex;
    gap: 0.75rem;
  }
  @media (max-width: 749px) {
    .newsletter__field-wrapper {
      flex-direction: column;
    }
    .newsletter__heading {
      font-size: 2.2rem;
    }
    .newsletter__description {
      font-size: 1.5rem;
    }
  }
  .newsletter__input {
    flex: 1;
    padding: clamp(1rem, 1.2vw, 1.4rem) clamp(1.2rem, 1.4vw, 1.6rem);
    border: 2px solid #e5e5e5;
    border-radius: clamp(6px, 0.5vw, 8px);
    font-size: clamp(1.4rem, 1.1vw, 1.6rem);
    transition: border-color 0.2s, box-shadow 0.2s;
    background: #fafafa;
  }
  .newsletter__input:focus {
    outline: none;
    border-color: #c9a227;
    box-shadow: 0 0 0 3px rgba(201, 162, 39, 0.15);
    background: #ffffff;
  }
  .newsletter__button {
    padding: clamp(1rem, 1.2vw, 1.4rem) clamp(1.5rem, 2vw, 2.5rem);
    white-space: nowrap;
    font-size: clamp(1.4rem, 1.1vw, 1.6rem);
    background: linear-gradient(135deg, #c9a227 0%, #d4b340 100%);
    color: white;
    border: none;
    border-radius: clamp(6px, 0.5vw, 8px);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .newsletter__button:hover {
    background: linear-gradient(135deg, #b8922a 0%, #c9a227 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(201, 162, 39, 0.3);
  }
  .newsletter__incentive {
    margin-top: clamp(0.75rem, 1vw, 1.25rem);
    font-size: clamp(1.3rem, 1vw, 1.5rem);
    color: #c9a227;
    font-weight: 600;
  }
  .newsletter__privacy {
    margin-top: 0.75rem;
    font-size: clamp(1.2rem, 0.9vw, 1.4rem);
    color: rgba(0,0,0,0.5);
  }
  .newsletter__success {
    margin-top: 1rem;
    color: #2e7d32;
    font-size: clamp(1.3rem, 1vw, 1.5rem);
    font-weight: 500;
  }
  .newsletter__error {
    margin-top: 1rem;
    color: #c62828;
    font-size: clamp(1.3rem, 1vw, 1.5rem);
  }
  /* Large displays */
  @media (min-width: 1440px) {
    .newsletter__content {
      max-width: 550px;
    }
    .newsletter__form-wrapper {
      max-width: 550px;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Our Community"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Subscribe for exclusive designs, early access to new products, and special offers."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "incentive",
      "label": "Incentive Text",
      "default": "Get 10% off your first order!"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Thanks for subscribing! Check your email for your discount code."
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy Text",
      "default": "We respect your privacy. Unsubscribe at any time."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f8f8"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
