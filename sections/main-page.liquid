<div class="page page-width">
  <h1 class="page__title h1">{{ page.title }}</h1>
  <div class="page__content rte">
    {{ page.content }}
  </div>
</div>

<style>
  .page {
    padding: 40px 0 80px;
  }

  .page__title {
    margin-bottom: 2rem;
  }

  .page__content {
    max-width: 800px;
  }

  .rte h2,
  .rte h3,
  .rte h4 {
    margin-top: 2rem;
  }

  .rte p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .rte ul,
  .rte ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .rte li {
    margin-bottom: 0.5rem;
  }

  .rte img {
    margin: 2rem 0;
    border-radius: 8px;
  }
</style>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section-page"
}
{% endschema %}
