<div class="contact-methods section-{{ section.id }}" style="background-color: {{ section.settings.background_color }};">
  <div class="contact-methods__wrapper page-width">
    {% if section.settings.heading != blank %}
      <div class="contact-methods__header">
        {% if section.settings.subheading != blank %}
          <p class="contact-methods__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        <h2 class="contact-methods__heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}
    <div class="contact-methods__grid">
      <a href="{{ section.settings.messenger_url | default: 'https://m.me/' }}" class="contact-methods__card" target="_blank" rel="noopener">
        <div class="contact-methods__icon">
          <svg width="44" height="44" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.36 2 2 6.13 2 11.7c0 2.91 1.19 5.44 3.14 7.17.16.14.26.35.27.57l.05 1.78c.02.62.63 1.04 1.21.83l1.99-.83c.17-.07.36-.09.54-.05.9.25 1.86.39 2.8.39 5.64 0 10-4.13 10-9.7S17.64 2 12 2zm5.89 7.45l-2.9 4.6c-.46.73-1.46.92-2.15.41l-2.31-1.73c-.19-.14-.45-.14-.64 0L7.1 15.1c-.31.23-.72-.13-.52-.47l2.89-4.6c.46-.73 1.47-.92 2.15-.41l2.32 1.73c.19.14.45.14.64 0l2.79-2.37c.3-.24.71.13.52.47z"/></svg>
        </div>
        <h3 class="contact-methods__name">{{ section.settings.messenger_title | default: 'Message Us' }}</h3>
        <p class="contact-methods__desc">{{ section.settings.messenger_desc | default: 'Quick chat on Facebook Messenger' }}</p>
        <span class="contact-methods__cta button button--secondary">{{ section.settings.messenger_button | default: 'Open Chat' }}</span>
      </a>
      <a href="mailto:{{ section.settings.email | default: 'HunterBos@BosBusinessServices.org' }}" class="contact-methods__card">
        <div class="contact-methods__icon">
          <svg width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
        </div>
        <h3 class="contact-methods__name">{{ section.settings.email_title | default: 'Send an Email' }}</h3>
        <p class="contact-methods__desc">{{ section.settings.email_desc | default: 'We reply within 24 hours' }}</p>
        <span class="contact-methods__cta button button--secondary">{{ section.settings.email_button | default: 'Email Us' }}</span>
      </a>
      <a href="tel:{{ section.settings.phone | default: '(248)838-8314' | remove: '(' | remove: ')' | remove: '-' | remove: ' ' }}" class="contact-methods__card">
        <div class="contact-methods__icon">
          <svg width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        </div>
        <h3 class="contact-methods__name">{{ section.settings.phone_title | default: 'Call Now' }}</h3>
        <p class="contact-methods__desc">{{ section.settings.phone_desc | default: 'Speak with us directly' }}</p>
        <span class="contact-methods__cta button button--secondary">{{ section.settings.phone_button | default: 'Call Us' }}</span>
      </a>
      <a href="{{ section.settings.quote_url | default: '/pages/request-quote' }}" class="contact-methods__card">
        <div class="contact-methods__icon">
          <svg width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
        </div>
        <h3 class="contact-methods__name">{{ section.settings.quote_title | default: 'Request Quote' }}</h3>
        <p class="contact-methods__desc">{{ section.settings.quote_desc | default: 'Get pricing for your project' }}</p>
        <span class="contact-methods__cta button button--secondary">{{ section.settings.quote_button | default: 'Get Quote' }}</span>
      </a>
    </div>
  </div>
</div>

<style>
.contact-methods { padding: clamp(50px, 6vw, 80px) 0; }
.contact-methods__wrapper { max-width: 1400px; margin: 0 auto; }
.contact-methods__header { text-align: center; margin-bottom: clamp(2rem, 4vw, 3.5rem); }
.contact-methods__subheading { text-transform: uppercase; letter-spacing: 0.12em; font-size: clamp(1.2rem, 1vw, 1.4rem); font-weight: 600; color: #c9a227; margin: 0 0 0.75rem; }
.contact-methods__heading { font-size: clamp(2.4rem, 3vw, 3.6rem); font-weight: 700; color: #1a1a1a; margin: 0; line-height: 1.2; }
.contact-methods__grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
.contact-methods__card { display: flex; flex-direction: column; align-items: center; text-align: center; padding: clamp(1.5rem, 2.5vw, 2.5rem) clamp(1rem, 1.5vw, 1.5rem); background: #fff; border-radius: clamp(12px, 1vw, 16px); border: 1px solid rgba(0,0,0,0.06); box-shadow: 0 4px 16px rgba(0,0,0,0.06); text-decoration: none; transition: transform 0.3s cubic-bezier(0.25,0.46,0.45,0.94), box-shadow 0.3s cubic-bezier(0.25,0.46,0.45,0.94); }
.contact-methods__card:hover { transform: translateY(-8px); box-shadow: 0 16px 40px rgba(0,0,0,0.12); text-decoration: none; }
.contact-methods__icon { width: 72px; height: 72px; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(201,162,39,0.12) 0%, rgba(201,162,39,0.06) 100%); border: 2px solid rgba(201,162,39,0.25); border-radius: 50%; color: #c9a227; margin-bottom: clamp(1rem, 1.5vw, 1.5rem); transition: all 0.3s ease; }
.contact-methods__icon svg { width: 44px; height: 44px; }
.contact-methods__card:hover .contact-methods__icon { background: linear-gradient(135deg, #c9a227 0%, #d4b340 100%); border-color: #c9a227; color: white; transform: scale(1.08); }
.contact-methods__name { font-size: clamp(1.6rem, 1.3vw, 2rem); font-weight: 600; color: #1a1a1a; margin: 0 0 0.5rem; }
.contact-methods__desc { font-size: clamp(1.3rem, 1vw, 1.5rem); color: #666; margin: 0 0 clamp(1rem, 1.5vw, 1.5rem); line-height: 1.5; }
.contact-methods__cta { margin-top: auto; padding: 0.8rem 1.5rem; font-size: clamp(1.3rem, 1vw, 1.5rem); border-radius: 6px; transition: all 0.2s ease; }
.contact-methods__card:hover .contact-methods__cta { background: #c9a227; color: #1a1a1a; border-color: #c9a227; }
@media (max-width: 989px) { .contact-methods__grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 749px) {
  .contact-methods__grid { grid-template-columns: 1fr; }
  .contact-methods__card { flex-direction: row; text-align: left; gap: 1.25rem; padding: 1.5rem; }
  .contact-methods__icon { width: 56px; height: 56px; flex-shrink: 0; margin-bottom: 0; }
  .contact-methods__icon svg { width: 28px; height: 28px; }
  .contact-methods__cta { display: none; }
}
.contact-methods[style*="1a1a1a"] .contact-methods__heading { color: #fff; }
.contact-methods[style*="1a1a1a"] .contact-methods__card { background: #242424; border-color: rgba(255,255,255,0.1); }
.contact-methods[style*="1a1a1a"] .contact-methods__name { color: #fff; }
.contact-methods[style*="1a1a1a"] .contact-methods__desc { color: rgba(255,255,255,0.7); }
</style>

