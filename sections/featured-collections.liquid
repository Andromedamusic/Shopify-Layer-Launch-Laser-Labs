{{ 'section-featured-collections.css' | asset_url | stylesheet_tag }}

<div class="featured-collections page-width section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="featured-collections__header">
      <h2 class="featured-collections__heading h2">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="featured-collections__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="featured-collections__grid featured-collections__grid--{{ section.blocks.size }}">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'collection' %}
          {% assign collection = collections[block.settings.collection] %}
          <div class="featured-collections__item" {{ block.shopify_attributes }}>
            <a href="{{ collection.url | default: '#' }}" class="featured-collections__link">
              <div class="featured-collections__image-wrapper">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'featured-collections__image',
                    alt: collection.title | default: block.settings.title
                  }}
                {% elsif collection.featured_image != blank %}
                  {{ collection.featured_image | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'featured-collections__image',
                    alt: collection.title
                  }}
                {% else %}
                  <div class="featured-collections__placeholder">
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                <div class="featured-collections__overlay"></div>
              </div>
              <div class="featured-collections__content">
                <h3 class="featured-collections__title h3">
                  {{ block.settings.title | default: collection.title | default: 'Collection' }}
                </h3>
                {% if block.settings.description != blank %}
                  <p class="featured-collections__description">{{ block.settings.description }}</p>
                {% endif %}
                <span class="featured-collections__cta button button--link">
                  {{ block.settings.button_label | default: 'Shop Now' }}
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4.16669 10H15.8334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M10 4.16669L15.8333 10L10 15.8334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              </div>
            </a>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section",
  "class": "section-featured-collections",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Our Collections"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium engraved products for every occasion"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image",
          "info": "Overrides collection featured image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title",
          "info": "Overrides collection title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection",
          "settings": {
            "title": "Slate Coasters",
            "description": "Premium natural slate with custom engraving",
            "button_label": "Shop Coasters"
          }
        },
        {
          "type": "collection",
          "settings": {
            "title": "Golf Items",
            "description": "Personalized accessories for the course",
            "button_label": "Shop Golf"
          }
        },
        {
          "type": "collection",
          "settings": {
            "title": "Branding Gifts",
            "description": "Corporate and business gift solutions",
            "button_label": "Shop Gifts"
          }
        }
      ]
    }
  ]
}
{% endschema %}
