<script>
  /**
   * Mobile Menu - Robust Implementation for All Devices
   * Fixed: Close button works on vertical desktop, touch devices, and all viewports
   */
  (function() {
    'use strict';

    var initialized = false;
    var touchHandled = false;

    function initMobileMenu() {
      if (initialized) return;

      var mobileToggle = document.querySelector('.header__mobile-toggle');
      var mobileDrawer = document.querySelector('.header__mobile-drawer');
      var mobileOverlay = document.querySelector('.header__mobile-overlay');
      var mobileClose = document.querySelector('.header__mobile-close');

      if (!mobileToggle || !mobileDrawer) {
        console.warn('Mobile menu elements not found');
        return;
      }

      initialized = true;

      var savedScrollY = 0;

      function openMobileMenu(e) {
        if (e) {
          e.preventDefault();
          e.stopPropagation();
        }

        // Save current scroll position and reset any horizontal scroll
        savedScrollY = window.scrollY;
        window.scrollTo(0, savedScrollY); // Reset horizontal scroll to 0

        mobileDrawer.classList.add('is-open');
        mobileDrawer.setAttribute('aria-hidden', 'false');
        mobileToggle.setAttribute('aria-expanded', 'true');

        if (mobileOverlay) {
          mobileOverlay.classList.add('is-visible');
        }

        // Lock body scroll while preserving position
        document.body.style.overflow = 'hidden';
        document.body.style.position = 'fixed';
        document.body.style.top = '-' + savedScrollY + 'px';
        document.body.style.left = '0';
        document.body.style.right = '0';
        document.body.classList.add('mobile-menu-open');

        setTimeout(function() {
          if (mobileClose) mobileClose.focus();
        }, 100);
      }

      function closeMobileMenu(e) {
        if (e) {
          e.preventDefault();
          e.stopPropagation();
        }

        mobileDrawer.classList.remove('is-open');
        mobileDrawer.setAttribute('aria-hidden', 'true');
        mobileToggle.setAttribute('aria-expanded', 'false');

        if (mobileOverlay) {
          mobileOverlay.classList.remove('is-visible');
        }

        // Restore body scroll
        document.body.style.overflow = '';
        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.left = '';
        document.body.style.right = '';
        document.body.classList.remove('mobile-menu-open');

        // Restore scroll position
        window.scrollTo(0, savedScrollY);

        mobileToggle.focus();
      }

      // Unified click/tap handler that works on ALL devices
      function addUnifiedHandler(element, handler) {
        if (!element) return;

        var touchStarted = false;
        var touchMoved = false;

        // Touch start - mark that touch began
        element.addEventListener('touchstart', function(e) {
          touchStarted = true;
          touchMoved = false;
        }, { passive: true });

        // Touch move - mark if user scrolled
        element.addEventListener('touchmove', function(e) {
          touchMoved = true;
        }, { passive: true });

        // Touch end - handle tap if no scroll
        element.addEventListener('touchend', function(e) {
          if (touchStarted && !touchMoved) {
            e.preventDefault();
            touchHandled = true;
            handler(e);
            // Reset after short delay
            setTimeout(function() { touchHandled = false; }, 300);
          }
          touchStarted = false;
        }, { passive: false });

        // Click handler - for mouse/keyboard, skip if touch just handled it
        element.addEventListener('click', function(e) {
          if (!touchHandled) {
            e.preventDefault();
            handler(e);
          }
        });

        // Pointer events for hybrid devices (Surface, iPad with mouse)
        element.addEventListener('pointerup', function(e) {
          // Only handle pointer if it's a mouse click (not touch)
          if (e.pointerType === 'mouse' && !touchHandled) {
            // Let click handler deal with it
          }
        });
      }

      // Attach handlers
      addUnifiedHandler(mobileToggle, openMobileMenu);
      addUnifiedHandler(mobileClose, closeMobileMenu);
      addUnifiedHandler(mobileOverlay, closeMobileMenu);

      // Expandable submenu handlers
      document.querySelectorAll('.header__mobile-expand').forEach(function(button) {
        addUnifiedHandler(button, function(e) {
          var parent = button.closest('.header__mobile-item--expandable');
          if (!parent) return;

          var isExpanded = parent.classList.contains('is-expanded');

          document.querySelectorAll('.header__mobile-item--expandable.is-expanded').forEach(function(item) {
            if (item !== parent) {
              item.classList.remove('is-expanded');
              var expandBtn = item.querySelector('.header__mobile-expand');
              if (expandBtn) expandBtn.setAttribute('aria-expanded', 'false');
            }
          });

          parent.classList.toggle('is-expanded');
          button.setAttribute('aria-expanded', String(!isExpanded));
        });
      });

      // Close on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && mobileDrawer.classList.contains('is-open')) {
          closeMobileMenu(e);
        }
      });

      // Close when clicking links inside drawer
      mobileDrawer.querySelectorAll('a').forEach(function(link) {
        link.addEventListener('click', function() {
          setTimeout(closeMobileMenu, 100);
        });
      });

      // Direct onclick as fallback for close button (most reliable)
      if (mobileClose) {
        mobileClose.onclick = function(e) {
          closeMobileMenu(e);
          return false;
        };
      }
    }

    // Initialize
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileMenu);
    } else {
      initMobileMenu();
    }

    // Shopify theme editor support
    document.addEventListener('shopify:section:load', function() {
      initialized = false;
      initMobileMenu();
    });

    // Fallback initialization
    setTimeout(initMobileMenu, 500);

    // Scroll detection for header shadow
    var header = document.querySelector('.header');
    if (header) {
      var ticking = false;

      function updateHeaderOnScroll() {
        if (window.scrollY > 10) {
          header.classList.add('is-scrolled');
        } else {
          header.classList.remove('is-scrolled');
        }
        ticking = false;
      }

      window.addEventListener('scroll', function() {
        if (!ticking) {
          window.requestAnimationFrame(updateHeaderOnScroll);
          ticking = true;
        }
      }, { passive: true });

      updateHeaderOnScroll();
    }
  })();
