<style>
  .header {
    position: sticky;
    position: -webkit-sticky;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-top: 3px solid #c9a227;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 4px 16px rgba(0,0,0,0.06);
    transition: box-shadow 0.3s ease;
  }

  /* Enhanced shadow when scrolled */
  .header.is-scrolled {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background: rgba(13, 13, 13, 0.98);
      border-top: 3px solid #c9a227;
      border-bottom-color: rgba(255, 255, 255, 0.1);
    }

    .header.is-scrolled {
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }
  }

  /* Ensure header is always on top on mobile */
  @media (max-width: 989px) {
    .header {
      position: sticky;
      position: -webkit-sticky;
      top: 0;
      z-index: 1000;
    }
  }

  .header__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: clamp(14px, 1.5vw, 24px) clamp(20px, 3vw, 60px);
    gap: clamp(1.5rem, 3vw, 4rem);
    max-width: var(--container-full, 2400px);
    margin: 0 auto;
  }

  .header__logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .header__logo-image {
    max-height: clamp(45px, 5vw, 75px);
    width: auto;
  }

  /* Premium Branding Styles */
  .header__logo-brand {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .header__logo-tagline {
    font-size: clamp(0.9rem, 0.8vw, 1.3rem);
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #c9a227;
    margin-bottom: 2px;
  }

  .header__logo-text {
    font-size: clamp(1.8rem, 1.8vw, 3rem);
    font-weight: 800;
    color: #1a1a1a;
    letter-spacing: -0.02em;
    line-height: 1.1;
    text-transform: uppercase;
  }

  @media (prefers-color-scheme: dark) {
    .header__logo-text {
      color: #ffffff;
    }
  }

  .header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  /* Expanded Navigation - Fluid Sizing */
  .header__menu {
    display: flex;
    gap: clamp(0.25rem, 0.5vw, 1rem);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .header__menu-item {
    position: relative;
  }

  .header__menu-link {
    display: flex;
    align-items: center;
    gap: clamp(4px, 0.4vw, 8px);
    padding: clamp(10px, 1vw, 16px) clamp(16px, 1.5vw, 32px);
    font-size: clamp(1.3rem, 1vw, 1.8rem);
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #1a1a1a;
    text-decoration: none;
    border-radius: clamp(4px, 0.4vw, 8px);
    transition: all 0.25s ease;
  }

  @media (prefers-color-scheme: dark) {
    .header__menu-link {
      color: #ffffff;
    }
  }

  .header__menu-link:hover {
    color: #c9a227;
    background: rgba(201, 162, 39, 0.08);
    text-decoration: none;
  }

  /* Large Display Enhancements for Header */
  @media (min-width: 1440px) {
    .header__wrapper {
      padding: clamp(16px, 1.8vw, 28px) clamp(30px, 4vw, 80px);
    }
  }

  @media (min-width: 1920px) {
