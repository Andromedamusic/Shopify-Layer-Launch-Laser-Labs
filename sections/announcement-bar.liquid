{%- if section.settings.text != blank -%}
  <div class="announcement-bar" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
    <div class="announcement-bar__wrapper page-width">
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}" class="announcement-bar__link">
          {{ section.settings.text }}
        </a>
      {%- else -%}
        <p class="announcement-bar__text">{{ section.settings.text }}</p>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

<style>
  .announcement-bar {
    padding: 12px 0;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    /* Ensure minimum contrast with text shadow for any color combo */
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .announcement-bar__text,
  .announcement-bar__link {
    margin: 0;
    color: inherit;
    text-decoration: none;
    /* Enhanced legibility */
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: none;
    /* Ensure white text is always visible on dark backgrounds */
    text-shadow:
      0 0 1px currentColor,
      0 1px 3px rgba(0, 0, 0, 0.4);
  }

  .announcement-bar__link:hover {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  /* Force high contrast for common dark background scenarios */
  .announcement-bar[style*="background-color: #1a1a1a"] .announcement-bar__text,
  .announcement-bar[style*="background-color: #1a1a1a"] .announcement-bar__link,
  .announcement-bar[style*="background-color:#1a1a1a"] .announcement-bar__text,
  .announcement-bar[style*="background-color:#1a1a1a"] .announcement-bar__link,
  .announcement-bar[style*="background-color: #333"] .announcement-bar__text,
  .announcement-bar[style*="background-color: #333"] .announcement-bar__link,
  .announcement-bar[style*="background-color: rgb(26"] .announcement-bar__text,
  .announcement-bar[style*="background-color: rgb(26"] .announcement-bar__link {
    color: #ffffff !important;
    text-shadow:
      0 0 2px rgba(255, 255, 255, 0.5),
      0 1px 3px rgba(0, 0, 0, 0.5);
  }
</style>

{% schema %}
{
  "name": "Announcement bar",
  "tag": "section",
  "class": "section-announcement-bar",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free Shipping on Orders Over $75!"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
