{%- comment -%}
  Collection Hero Section - Premium Edition
  Features: Ken Burns effect, staggered animations, trust signals,
  material-specific styling, scroll indicator, and reduced-motion support
{%- endcomment -%}

{%- liquid
  assign material_class = section.settings.material_style | default: 'default'
  assign hero_style = section.settings.hero_style | default: 'standard'
  assign show_trust = section.settings.show_trust_signals
  assign show_scroll = section.settings.show_scroll_indicator
  assign enable_animations = section.settings.enable_animations
-%}

<div class="collection-hero collection-hero--{{ hero_style }} collection-hero--material-{{ material_class }}"
     style="--hero-bg: {{ section.settings.background_color }}; --hero-accent: {{ section.settings.accent_color | default: '#c9a227' }};"
     data-animations="{{ enable_animations }}">

  {%- if section.settings.image != blank -%}
    <div class="collection-hero__image-wrapper">
      <div class="collection-hero__image-container">
        {{ section.settings.image | image_url: width: 2400 | image_tag:
          loading: 'eager',
          fetchpriority: 'high',
          class: 'collection-hero__image',
          alt: collection.title,
          sizes: '100vw'
        }}
      </div>
      <div class="collection-hero__overlay"></div>
      <div class="collection-hero__gradient"></div>
    </div>
  {%- else -%}
    <div class="collection-hero__pattern"></div>
  {%- endif -%}

  <div class="collection-hero__content page-width">
    <div class="collection-hero__text">
      {%- if section.settings.badge != blank -%}
        <span class="collection-hero__badge" data-animate="badge">
          <span class="collection-hero__badge-icon">
            {%- case material_class -%}
              {%- when 'slate' -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M3 3h18v18H3V3zm2 2v14h14V5H5z"/></svg>
              {%- when 'wood' -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>
              {%- when 'leather' -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M21 5c-1.11-.35-2.33-.5-3.5-.5-1.95 0-4.05.4-5.5 1.5-1.45-1.1-3.55-1.5-5.5-1.5S2.45 4.9 1 6v14.65c0 .25.25.5.5.5.1 0 .15-.05.25-.05C3.1 20.45 5.05 20 6.5 20c1.95 0 4.05.4 5.5 1.5 1.35-.85 3.8-1.5 5.5-1.5 1.65 0 3.35.3 4.75 1.05.1.05.15.05.25.05.25 0 .5-.25.5-.5V6c-.6-.45-1.25-.75-2-1zm0 13.5c-1.1-.35-2.3-.5-3.5-.5-1.7 0-4.15.65-5.5 1.5V8c1.35-.85 3.8-1.5 5.5-1.5 1.2 0 2.4.15 3.5.5v11.5z"/></svg>
              {%- when 'acrylic' -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 3L1 9l11 6 9-4.91V17h2V9M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82z"/></svg>
              {%- when 'metal' -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M22 7l-2-2-9.1 9.1-4.55-4.55-6.35 6.35 1.41 1.41 4.95-4.95 4.54 4.54L22 7z"/></svg>
              {%- when 'glass' -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M3 14c0 1.3.84 2.4 2 2.82V20H3v2h6v-2H7v-3.18C8.16 16.4 9 15.3 9 14V6H3v8zm2-6h2v3H5V8zm15.64 1L19 7.36V6h-2v1.36L15.36 9 14 10.36V12h-2v2h2v1.64L15.36 17H19v-2h-2v-.36L18.36 13H21v-2h-2.64L17 9.64 18.36 8l1.28 1z"/></svg>
              {%- else -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            {%- endcase -%}
          </span>
          {{ section.settings.badge }}
        </span>
      {%- endif -%}

      <h1 class="collection-hero__title" data-animate="title">
        {{ section.settings.title | default: collection.title }}
      </h1>

      {%- if section.settings.subtitle != blank -%}
        <p class="collection-hero__subtitle" data-animate="subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="collection-hero__description" data-animate="description">{{ section.settings.description }}</p>
      {%- elsif collection.description != blank -%}
        <p class="collection-hero__description" data-animate="description">{{ collection.description | strip_html | truncate: 200 }}</p>
      {%- endif -%}

      <div class="collection-hero__meta" data-animate="meta">
        {%- if section.settings.show_product_count -%}
          <div class="collection-hero__count">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7" rx="1"/>
              <rect x="14" y="3" width="7" height="7" rx="1"/>
              <rect x="14" y="14" width="7" height="7" rx="1"/>
              <rect x="3" y="14" width="7" height="7" rx="1"/>
            </svg>
            <span>{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
          </div>
        {%- endif -%}

        {%- if show_trust -%}
          <div class="collection-hero__trust">
            <div class="collection-hero__trust-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/></svg>
              <span>Quality Guaranteed</span>
            </div>
            <div class="collection-hero__trust-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
              <span>{{ section.settings.production_time | default: '3-5 Day Production' }}</span>
            </div>
          </div>
        {%- endif -%}
      </div>

      {%- if section.settings.cta_text != blank -%}
        <div class="collection-hero__cta" data-animate="cta">
          <a href="{{ section.settings.cta_link | default: '#main-collection' }}" class="collection-hero__button">
            <span>{{ section.settings.cta_text }}</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if show_scroll -%}
    <div class="collection-hero__scroll-indicator" data-animate="scroll">
      <span>Explore Collection</span>
      <div class="collection-hero__scroll-arrow">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </div>
  {%- endif -%}
</div>

<style>
  /* ============================================
     COLLECTION HERO - PREMIUM EDITION
     Premium animations, material styles, and
     conversion-optimized design
     ============================================ */

  .collection-hero {
    position: relative;
    min-height: clamp(350px, 65vh, 700px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: var(--hero-bg, #1a1a1a);
  }

  .collection-hero--tall {
    min-height: clamp(400px, 75vh, 850px);
  }

  .collection-hero--compact {
    min-height: clamp(280px, 45vh, 500px);
  }

  /* ============================================
     IMAGE & OVERLAYS
     Ken Burns effect with premium overlays
     ============================================ */

  .collection-hero__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .collection-hero__image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .collection-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.08);
    filter: brightness(0.95);
    animation: heroKenBurns 25s ease-in-out infinite alternate;
  }

  @keyframes heroKenBurns {
    0% {
      transform: scale(1.08) translateX(-1%);
      filter: brightness(0.92);
    }
    100% {
      transform: scale(1.15) translateX(1%);
      filter: brightness(1);
    }
  }

  .collection-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.75) 0%,
      rgba(0, 0, 0, 0.4) 40%,
      rgba(0, 0, 0, 0.5) 100%
    );
    z-index: 1;
  }

  .collection-hero__gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50%;
    background: linear-gradient(
      to top,
      rgba(26, 26, 26, 0.95) 0%,
      rgba(26, 26, 26, 0.5) 40%,
      transparent 100%
    );
    z-index: 2;
  }

  /* Pattern background when no image */
  .collection-hero__pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(ellipse at 20% 30%, rgba(201, 162, 39, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 70%, rgba(201, 162, 39, 0.05) 0%, transparent 50%),
      linear-gradient(135deg, #1a1a1a 0%, #252525 50%, #1a1a1a 100%);
  }

  /* ============================================
     CONTENT LAYOUT
     Premium typography and staggered animations
     ============================================ */

  .collection-hero__content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: clamp(60px, 8vw, 120px) 24px;
    width: 100%;
  }

  .collection-hero__text {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Badge */
  .collection-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    background: linear-gradient(135deg, var(--hero-accent) 0%, #b8922a 100%);
    color: #1a1a1a;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    border-radius: 50px;
    margin-bottom: 1.5rem;
    box-shadow:
      0 4px 15px rgba(201, 162, 39, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    opacity: 0;
    transform: translateY(20px);
  }

  .collection-hero__badge-icon {
    display: flex;
    align-items: center;
    opacity: 0.9;
  }

  [data-animations="true"] .collection-hero__badge {
    animation: slideInUp 0.7s cubic-bezier(0.22, 1, 0.36, 1) 0.1s forwards;
  }

  /* Title */
  .collection-hero__title {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: clamp(2.6rem, 6vw, 4.5rem);
    font-weight: 400;
    color: #ffffff;
    margin: 0 0 1rem 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    opacity: 0;
    transform: translateY(30px);
  }

  [data-animations="true"] .collection-hero__title {
    animation: slideInUp 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.2s forwards;
  }

  /* Subtitle - WCAG AA compliant lighter gold for better contrast */
  .collection-hero__subtitle {
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    color: #e5c158;
    font-weight: 500;
    letter-spacing: 0.05em;
    margin: 0 0 1.25rem 0;
    opacity: 0;
    transform: translateY(25px);
  }

  [data-animations="true"] .collection-hero__subtitle {
    animation: slideInUp 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.3s forwards;
  }

  /* Description */
  .collection-hero__description {
    font-size: clamp(1.05rem, 1.8vw, 1.25rem);
    color: rgba(255, 255, 255, 0.88);
    line-height: 1.7;
    margin: 0 0 2rem 0;
    max-width: 680px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(25px);
  }

  [data-animations="true"] .collection-hero__description {
    animation: slideInUp 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.35s forwards;
  }

  /* Meta (count + trust) */
  .collection-hero__meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1.5rem 2.5rem;
    margin-bottom: 2rem;
    opacity: 0;
    transform: translateY(20px);
  }

  [data-animations="true"] .collection-hero__meta {
    animation: slideInUp 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.45s forwards;
  }

  .collection-hero__count {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 1rem;
    color: var(--hero-accent);
    font-weight: 500;
  }

  .collection-hero__count svg {
    opacity: 0.85;
  }

  /* Trust signals */
  .collection-hero__trust {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1.25rem;
  }

  .collection-hero__trust-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    padding: 0.4rem 0.8rem;
    background: rgba(255, 255, 255, 0.06);
    border-radius: 6px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .collection-hero__trust-item svg {
    color: var(--hero-accent);
    flex-shrink: 0;
  }

  /* CTA Button */
  .collection-hero__cta {
    opacity: 0;
    transform: translateY(20px);
  }

  [data-animations="true"] .collection-hero__cta {
    animation: slideInUp 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.55s forwards;
  }

  .collection-hero__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--hero-accent) 0%, #b8922a 100%);
    color: #1a1a1a;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 6px;
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow:
      0 4px 20px rgba(201, 162, 39, 0.35),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .collection-hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.25), transparent);
    transition: left 0.6s ease;
  }

  .collection-hero__button:hover {
    transform: translateY(-3px);
    box-shadow:
      0 8px 30px rgba(201, 162, 39, 0.45),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .collection-hero__button:hover::before {
    left: 100%;
  }

  .collection-hero__button svg {
    transition: transform 0.3s ease;
  }

  .collection-hero__button:hover svg {
    transform: translateX(4px);
  }

  /* Scroll Indicator */
  .collection-hero__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    z-index: 10;
    opacity: 0;
  }

  [data-animations="true"] .collection-hero__scroll-indicator {
    animation: fadeIn 1s ease 1.2s forwards;
  }

  .collection-hero__scroll-arrow {
    animation: scrollBounce 2s ease-in-out infinite;
  }

  .collection-hero__scroll-arrow svg {
    opacity: 0.7;
  }

  @keyframes scrollBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }

  /* ============================================
     ANIMATION KEYFRAMES
     ============================================ */

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* ============================================
     MATERIAL-SPECIFIC STYLES
     Visual treatments for each material type
     ============================================ */

  /* Slate */
  .collection-hero--material-slate .collection-hero__pattern {
    background:
      radial-gradient(ellipse at 30% 40%, rgba(100, 100, 100, 0.15) 0%, transparent 50%),
      linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 50%, #1f1f1f 100%);
  }

  .collection-hero--material-slate .collection-hero__badge {
    background: linear-gradient(135deg, #4a4a4a 0%, #3a3a3a 100%);
    color: #ffffff;
    box-shadow:
      0 4px 15px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  /* Wood */
  .collection-hero--material-wood .collection-hero__pattern {
    background:
      radial-gradient(ellipse at 25% 35%, rgba(139, 111, 71, 0.12) 0%, transparent 50%),
      linear-gradient(135deg, #2a2218 0%, #3d3022 50%, #2a2218 100%);
  }

  .collection-hero--material-wood .collection-hero__badge {
    background: linear-gradient(135deg, #8B6F47 0%, #6F5D3F 100%);
    color: #ffffff;
  }

  /* Leather */
  .collection-hero--material-leather .collection-hero__pattern {
    background:
      radial-gradient(ellipse at 20% 30%, rgba(74, 55, 40, 0.2) 0%, transparent 50%),
      linear-gradient(135deg, #2a201a 0%, #3a2e26 50%, #2a201a 100%);
  }

  .collection-hero--material-leather .collection-hero__badge {
    background: linear-gradient(135deg, #8B7664 0%, #6B5346 100%);
    color: #ffffff;
  }

  /* Acrylic */
  .collection-hero--material-acrylic .collection-hero__pattern {
    background:
      radial-gradient(ellipse at 50% 50%, rgba(255, 255, 255, 0.08) 0%, transparent 60%),
      linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 50%, #1a1a1a 100%);
  }

  .collection-hero--material-acrylic .collection-hero__overlay {
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.65) 0%,
      rgba(0, 0, 0, 0.35) 40%,
      rgba(0, 0, 0, 0.45) 100%
    );
  }

  /* Metal */
  .collection-hero--material-metal .collection-hero__pattern {
    background:
      linear-gradient(90deg, rgba(60, 60, 60, 0.3) 0%, transparent 50%, rgba(60, 60, 60, 0.3) 100%),
      linear-gradient(135deg, #1f1f1f 0%, #2c2c2c 50%, #1f1f1f 100%);
  }

  .collection-hero--material-metal .collection-hero__badge {
    background: linear-gradient(90deg, #4a4a4a 0%, #5a5a5a 50%, #4a4a4a 100%);
    color: #ffffff;
  }

  /* Glass */
  .collection-hero--material-glass .collection-hero__pattern {
    background:
      radial-gradient(ellipse at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 40%),
      radial-gradient(ellipse at 70% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 40%),
      linear-gradient(135deg, #1a1a1a 0%, #262626 50%, #1a1a1a 100%);
  }

  .collection-hero--material-glass .collection-hero__overlay {
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.3) 40%,
      rgba(0, 0, 0, 0.4) 100%
    );
  }

  /* ============================================
     RESPONSIVE STYLES
     ============================================ */

  @media (max-width: 989px) {
    .collection-hero {
      min-height: clamp(300px, 55vh, 550px);
    }

    .collection-hero--tall {
      min-height: clamp(350px, 65vh, 650px);
    }

    .collection-hero__content {
      padding: clamp(50px, 7vw, 90px) 20px;
    }

    .collection-hero__trust {
      flex-direction: column;
      gap: 0.75rem;
    }
  }

  @media (max-width: 749px) {
    .collection-hero {
      min-height: clamp(280px, 50vh, 450px);
    }

    .collection-hero--tall {
      min-height: clamp(320px, 58vh, 520px);
    }

    .collection-hero--compact {
      min-height: clamp(220px, 38vh, 350px);
    }

    .collection-hero__content {
      padding: 40px 16px 50px;
    }

    .collection-hero__badge {
      font-size: 0.75rem;
      padding: 0.5rem 1rem;
      margin-bottom: 1rem;
    }

    .collection-hero__meta {
      flex-direction: column;
      gap: 1rem;
    }

    .collection-hero__scroll-indicator {
      bottom: 1.25rem;
      font-size: 0.75rem;
    }

    .collection-hero__button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  /* ============================================
     NON-ANIMATED FALLBACK
     Ensure visibility when animations disabled
     ============================================ */

  [data-animations="false"] .collection-hero__badge,
  [data-animations="false"] .collection-hero__title,
  [data-animations="false"] .collection-hero__subtitle,
  [data-animations="false"] .collection-hero__description,
  [data-animations="false"] .collection-hero__meta,
  [data-animations="false"] .collection-hero__cta,
