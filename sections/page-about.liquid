    .about-process__steps {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }

  .about-process__step {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .about-process__number {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--dark-bg);
    color: var(--gold-on-dark);
