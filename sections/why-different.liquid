<div class="why-different section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }};">
  <div class="why-different__wrapper page-width">
    {%- comment -%} Header Section - Centered {%- endcomment -%}
    <div class="why-different__header">
      {% if section.settings.subheading != blank %}
        <p class="why-different__subheading">
          <span class="why-different__subheading-line"></span>
          {{ section.settings.subheading }}
          <span class="why-different__subheading-line"></span>
        </p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="why-different__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="why-different__description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    {%- comment -%} Features Grid - Card Layout {%- endcomment -%}
    <div class="why-different__features-grid">
      {% for block in section.blocks %}
        <div class="why-different__card" {{ block.shopify_attributes }}>
          <div class="why-different__card-icon">
            {% if block.settings.icon != blank %}
              {{ block.settings.icon | image_url: width: 48 | image_tag: loading: 'lazy' }}
            {% else %}
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12C21.9988 14.1564 21.3005 16.2547 20.0093 17.9818C18.7182 19.709 16.9033 20.9725 14.8354 21.5839C12.7674 22.1953 10.5573 22.1219 8.53447 21.3746C6.51168 20.6273 4.78465 19.2461 3.61096 17.4371C2.43727 15.628 1.87979 13.4881 2.02168 11.3363C2.16356 9.18455 2.99721 7.13631 4.39828 5.49706C5.79935 3.85781 7.69279 2.71537 9.79619 2.24013C11.8996 1.7649 14.1003 1.98232 16.07 2.85999"/>
                <path d="M22 4L12 14.01L9 11.01"/>
              </svg>
            {% endif %}
          </div>
          <div class="why-different__card-content">
            <h3 class="why-different__card-title">{{ block.settings.title }}</h3>
            {% if block.settings.description != blank %}
              <p class="why-different__card-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {%- comment -%} CTA Button {%- endcomment -%}
    {% if section.settings.button_label != blank %}
      <div class="why-different__cta">
        <a href="{{ section.settings.button_link }}" class="why-different__button button button--primary">
          {{ section.settings.button_label }}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  /* ============================================
     Why Different Section - Premium Redesign
     ============================================ */
  .why-different {
    padding: var(--section-padding-y, clamp(60px, 8vw, 100px)) 0;
    background: linear-gradient(180deg, #fafafa 0%, #ffffff 100%);
  }

  .why-different__wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Header - Centered with Decorative Elements */
  .why-different__header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto clamp(3rem, 5vw, 5rem);
  }

  .why-different__subheading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: clamp(12px, 1.5vw, 20px);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: clamp(1.2rem, 1vw, 1.5rem);
    font-weight: 600;
    color: #c9a227;
    margin-bottom: clamp(1rem, 1.5vw, 1.5rem);
  }

  .why-different__subheading-line {
    display: block;
    width: clamp(30px, 4vw, 60px);
    height: 2px;
    background: linear-gradient(90deg, transparent, #c9a227);
  }

  .why-different__subheading-line:last-child {
    background: linear-gradient(90deg, #c9a227, transparent);
  }

  .why-different__heading {
    font-size: clamp(2.6rem, 3.5vw, 4.2rem);
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 clamp(1rem, 1.5vw, 1.5rem);
    line-height: 1.15;
  }

  .why-different__description {
    font-size: clamp(1.6rem, 1.3vw, 2rem);
    color: #4a4a4a;
    line-height: 1.7;
    max-width: 700px;
    margin: 0 auto;
  }

  .why-different__description p {
    margin: 0;
  }

  /* Features Grid - Card Layout */
  .why-different__features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: clamp(1.5rem, 2.5vw, 2.5rem);
    width: 100%;
    max-width: 1400px;
    margin-bottom: clamp(2.5rem, 4vw, 4rem);
  }

  /* Feature Cards */
  .why-different__card {
    background: #ffffff;
    border-radius: clamp(12px, 1vw, 16px);
    padding: clamp(1.5rem, 2.5vw, 2.5rem);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.04);
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94),
                box-shadow 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .why-different__card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  }

  /* Card Icon */
  .why-different__card-icon {
    width: clamp(56px, 5vw, 72px);
    height: clamp(56px, 5vw, 72px);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(201, 162, 39, 0.12) 0%, rgba(201, 162, 39, 0.06) 100%);
    border: 2px solid rgba(201, 162, 39, 0.25);
    border-radius: clamp(12px, 1vw, 16px);
    color: #c9a227;
    margin-bottom: clamp(1.25rem, 1.5vw, 1.75rem);
    transition: all 0.3s ease;
  }

  .why-different__card:hover .why-different__card-icon {
    background: linear-gradient(135deg, #c9a227 0%, #d4b340 100%);
    border-color: #c9a227;
    color: white;
    transform: scale(1.05);
  }

  .why-different__card-icon svg {
    width: clamp(24px, 2vw, 32px);
    height: clamp(24px, 2vw, 32px);
  }

  .why-different__card-icon img {
    width: clamp(28px, 2.5vw, 36px);
    height: clamp(28px, 2.5vw, 36px);
    object-fit: contain;
  }

  /* Card Content */
  .why-different__card-title {
    font-size: clamp(1.7rem, 1.4vw, 2.2rem);
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 clamp(0.5rem, 0.8vw, 0.75rem);
    line-height: 1.3;
  }

  .why-different__card-description {
    font-size: clamp(1.4rem, 1.1vw, 1.7rem);
    color: #555555;
    line-height: 1.6;
    margin: 0;
  }

  /* CTA Button */
  .why-different__cta {
    text-align: center;
  }

  .why-different__button {
    display: inline-flex;
    align-items: center;
    gap: clamp(8px, 0.8vw, 12px);
    background: linear-gradient(135deg, #c9a227 0%, #d4b340 100%);
    color: #1a1a1a;
    padding: clamp(14px, 1.5vw, 20px) clamp(28px, 3vw, 40px);
    font-size: clamp(1.4rem, 1.1vw, 1.7rem);
    font-weight: 600;
    border-radius: clamp(6px, 0.5vw, 10px);
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(201, 162, 39, 0.3);
  }

  .why-different__button:hover {
    background: linear-gradient(135deg, #b8922a 0%, #c9a227 100%);
    color: #000000;
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(201, 162, 39, 0.4);
    text-decoration: none;
  }

  .why-different__button svg {
    transition: transform 0.3s ease;
  }

  .why-different__button:hover svg {
    transform: translateX(4px);
  }

  /* ============================================
     Responsive Breakpoints
     ============================================ */

  /* Large Displays (1440px+) */
  @media (min-width: 1440px) {
    .why-different__features-grid {
      gap: clamp(2rem, 3vw, 3rem);
    }

    .why-different__header {
      max-width: 900px;
    }
  }

  /* Extra Large Displays (1920px+) */
  @media (min-width: 1920px) {
    .why-different__features-grid {
      max-width: 1600px;
    }

    .why-different__header {
      max-width: 1000px;
    }
  }

  /* 4K/Ultrawide Displays (2560px+) */
  @media (min-width: 2560px) {
    .why-different__features-grid {
      max-width: 2000px;
      gap: clamp(2.5rem, 3vw, 4rem);
    }

    .why-different__card {
      padding: clamp(2rem, 3vw, 3.5rem);
    }
  }

  /* Tablet (989px and below) */
  @media (max-width: 989px) {
    .why-different__features-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .why-different__heading {
      font-size: clamp(2.4rem, 4vw, 3rem);
    }
  }

  /* Mobile (749px and below) */
  @media (max-width: 749px) {
    .why-different__features-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .why-different__card {
      flex-direction: row;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.5rem;
    }

    .why-different__card-icon {
      margin-bottom: 0;
      width: 52px;
      height: 52px;
      flex-shrink: 0;
    }

    .why-different__subheading-line {
      width: 20px;
    }

    .why-different__button {
      width: 100%;
      justify-content: center;
    }
  }

  /* ============================================
     Dark Mode Support
     ============================================ */
  @media (prefers-color-scheme: dark) {
    .why-different {
      background: linear-gradient(180deg, #0d0d0d 0%, #1a1a1a 100%);
    }

    .why-different__heading {
      color: #ffffff;
    }

    .why-different__description {
      color: rgba(255, 255, 255, 0.75);
    }

    .why-different__card {
      background: #1f1f1f;
      border-color: rgba(255, 255, 255, 0.08);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .why-different__card:hover {
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
    }

    .why-different__card-icon {
      background: linear-gradient(135deg, rgba(201, 162, 39, 0.2) 0%, rgba(201, 162, 39, 0.1) 100%);
      border-color: rgba(201, 162, 39, 0.4);
    }

    .why-different__card-title {
      color: #ffffff;
    }

    .why-different__card-description {
      color: rgba(255, 255, 255, 0.65);
    }
  }
</style>

