{%- if section.settings.show_section -%}
<section class="contact-trust-signals" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="trust-signals__grid">
      <div class="trust-signal__badge">
        <div class="trust-signal__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/><circle cx="12" cy="16" r="1"/></svg>
        </div>
        <div class="trust-signal__content">
          <span class="trust-signal__title">{{ section.settings.ssl_title }}</span>
          <span class="trust-signal__text">{{ section.settings.ssl_text }}</span>
        </div>
      </div>
      <div class="trust-signal__badge">
        <div class="trust-signal__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="M9 12l2 2 4-4"/></svg>
        </div>
        <div class="trust-signal__content">
          <span class="trust-signal__title">{{ section.settings.privacy_title }}</span>
          <span class="trust-signal__text">{{ section.settings.privacy_text }}</span>
        </div>
      </div>
      <div class="trust-signal__badge">
        <div class="trust-signal__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="trust-signal__content">
          <span class="trust-signal__title">{{ section.settings.response_title }}</span>
          <span class="trust-signal__text">{{ section.settings.response_text }}</span>
        </div>
      </div>
      <div class="trust-signal__badge">
        <div class="trust-signal__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
        </div>
        <div class="trust-signal__content">
          <span class="trust-signal__title">{{ section.settings.local_title }}</span>
          <span class="trust-signal__text">{{ section.settings.local_text }}</span>
        </div>
      </div>
      <div class="trust-signal__badge">
        <div class="trust-signal__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
        </div>
        <div class="trust-signal__content">
          <span class="trust-signal__title">{{ section.settings.customers_title }}</span>
          <span class="trust-signal__text">{{ section.settings.customers_text }}</span>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .contact-trust-signals { padding: 40px 0; border-top: 1px solid rgba(0,0,0,0.05); border-bottom: 1px solid rgba(0,0,0,0.05); }
  .trust-signals__grid { display: flex; justify-content: center; align-items: stretch; gap: 2rem; flex-wrap: wrap; }
  .trust-signal__badge { display: flex; align-items: center; gap: 0.875rem; padding: 1rem 1.25rem; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.06); transition: transform 0.25s ease, box-shadow 0.25s ease; min-width: 180px; }
  .trust-signal__badge:hover { transform: translateY(-3px); box-shadow: 0 6px 20px rgba(0,0,0,0.1); }
  .trust-signal__icon { display: flex; align-items: center; justify-content: center; color: {{ section.settings.icon_color }}; flex-shrink: 0; }
  .trust-signal__icon svg { transition: transform 0.25s ease; }
  .trust-signal__badge:hover .trust-signal__icon svg { transform: scale(1.1); }
  .trust-signal__content { display: flex; flex-direction: column; gap: 0.125rem; }
  .trust-signal__title { font-size: 0.95rem; font-weight: 700; color: #1a1a1a; line-height: 1.2; }
  .trust-signal__text { font-size: 0.8rem; color: #666; line-height: 1.3; }
  @media (max-width: 989px) { .trust-signals__grid { gap: 1rem; } .trust-signal__badge { flex: 1 1 calc(50% - 1rem); min-width: 160px; } }
  @media (max-width: 575px) { .contact-trust-signals { padding: 30px 0; } .trust-signal__badge { flex: 1 1 100%; justify-content: flex-start; } .trust-signal__icon svg { width: 28px; height: 28px; } }
</style>
{%- endif -%}

{% schema %}
{
  "name": "Contact Trust Signals",
  "tag": "section",
  "class": "section-contact-trust-signals",
  "settings": [
    { "type": "checkbox", "id": "show_section", "label": "Show section", "default": true },
    { "type": "color", "id": "background_color", "label": "Background color", "default": "#f8f8f8" },
    { "type": "color", "id": "icon_color", "label": "Icon color", "default": "#c9a227" },
    { "type": "header", "content": "SSL Security Badge" },
    { "type": "text", "id": "ssl_title", "label": "Title", "default": "SSL Secure" },
    { "type": "text", "id": "ssl_text", "label": "Description", "default": "256-bit encryption" },
    { "type": "header", "content": "Privacy Badge" },
    { "type": "text", "id": "privacy_title", "label": "Title", "default": "Privacy Protected" },
    { "type": "text", "id": "privacy_text", "label": "Description", "default": "Your data stays safe" },
    { "type": "header", "content": "Response Time Badge" },
    { "type": "text", "id": "response_title", "label": "Title", "default": "24-Hour Response" },
    { "type": "text", "id": "response_text", "label": "Description", "default": "Quick reply guaranteed" },
    { "type": "header", "content": "Local Badge" },
    { "type": "text", "id": "local_title", "label": "Title", "default": "Michigan Made" },
    { "type": "text", "id": "local_text", "label": "Description", "default": "Proudly local" },
    { "type": "header", "content": "Customers Badge" },
    { "type": "text", "id": "customers_title", "label": "Title", "default": "500+ Happy Customers" },
    { "type": "text", "id": "customers_text", "label": "Description", "default": "5-star rated" }
  ],
  "presets": [{ "name": "Contact Trust Signals" }]
}
{% endschema %}
