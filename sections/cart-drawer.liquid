{%- comment -%}
  Cart Drawer - Slide-out cart functionality
{%- endcomment -%}

<div id="cart-drawer" class="cart-drawer" aria-hidden="true">
  <div class="cart-drawer__overlay" data-cart-drawer-close></div>
  <div class="cart-drawer__content" role="dialog" aria-modal="true" aria-label="Shopping cart">
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title">Your Cart</h2>
      <span class="cart-drawer__count">(<span data-cart-count>{{ cart.item_count }}</span> items)</span>
      <button class="cart-drawer__close" data-cart-drawer-close aria-label="Close cart">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>

    <div class="cart-drawer__body" data-cart-drawer-body>
      {% if cart.item_count > 0 %}
        <ul class="cart-drawer__items" data-cart-items>
          {% for item in cart.items %}
            <li class="cart-drawer__item" data-cart-item data-variant-id="{{ item.variant_id }}">
              <div class="cart-drawer__item-image">
                {% if item.image %}
                  {{ item.image | image_url: width: 120 | image_tag: loading: 'lazy', alt: item.title }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="cart-drawer__item-details">
                <a href="{{ item.url }}" class="cart-drawer__item-title">{{ item.product.title }}</a>
                {% unless item.product.has_only_default_variant %}
                  <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                {% endunless %}
                {% if item.properties.size > 0 %}
                  <div class="cart-drawer__item-properties">
                    {% for property in item.properties %}
                      {% unless property.last == blank %}
                        <p class="cart-drawer__item-property">{{ property.first }}: {{ property.last }}</p>
                      {% endunless %}
                    {% endfor %}
                  </div>
                {% endif %}
                <div class="cart-drawer__item-price">
                  {{ item.final_line_price | money }}
                </div>
                <div class="cart-drawer__item-actions">
                  <div class="cart-drawer__quantity">
                    <button class="cart-drawer__qty-btn" data-qty-change="-1" data-line="{{ forloop.index }}" aria-label="Decrease quantity">âˆ’</button>
                    <input type="number" class="cart-drawer__qty-input" value="{{ item.quantity }}" min="1" max="99" data-line="{{ forloop.index }}" aria-label="Quantity">
                    <button class="cart-drawer__qty-btn" data-qty-change="1" data-line="{{ forloop.index }}" aria-label="Increase quantity">+</button>
                  </div>
                  <button class="cart-drawer__remove" data-remove-item data-line="{{ forloop.index }}" aria-label="Remove {{ item.title }}">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"/>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                    </svg>
                  </button>
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <div class="cart-drawer__empty" data-cart-empty>
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1H5L7.68 14.39C7.77 14.8301 8.02 15.2233 8.38 15.498C8.74 15.7727 9.19 15.9113 9.64 15.89H19.36C19.81 15.9113 20.26 15.7727 20.62 15.498C20.98 15.2233 21.23 14.8301 21.32 14.39L23 6H6"/>
          </svg>
          <p>Your cart is empty</p>
          <a href="/collections/all" class="button button--primary">Continue Shopping</a>
        </div>
      {% endif %}
    </div>

    {% if cart.item_count > 0 %}
      <div class="cart-drawer__footer">
        {% if section.settings.show_order_note %}
          <div class="cart-drawer__note">
            <label for="cart-note">Order Note</label>
            <textarea id="cart-note" name="note" placeholder="Add a note for your order...">{{ cart.note }}</textarea>
          </div>
        {% endif %}
        <div class="cart-drawer__subtotal">
          <span>Subtotal</span>
          <span data-cart-subtotal>{{ cart.total_price | money }}</span>
        </div>
        <p class="cart-drawer__shipping-note">Shipping & taxes calculated at checkout</p>
        <a href="/checkout" class="cart-drawer__checkout button button--primary">
          Checkout
        </a>
        <a href="/cart" class="cart-drawer__view-cart button button--secondary">
          View Cart
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    pointer-events: none;
    visibility: hidden;
  }

  .cart-drawer.is-open {
    pointer-events: auto;
    visibility: visible;
  }

  .cart-drawer__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cart-drawer.is-open .cart-drawer__overlay {
    opacity: 1;
  }

  .cart-drawer__content {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 420px;
    height: 100%;
    background: white;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
  }

  .cart-drawer.is-open .cart-drawer__content {
    transform: translateX(0);
  }

  .cart-drawer__header {
    display: flex;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid #eee;
  }

  .cart-drawer__title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
  }

  .cart-drawer__count {
    font-size: 1.5rem;
    color: #666;
    margin-left: 0.5rem;
  }

  .cart-drawer__close {
    margin-left: auto;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: #1a1a1a;
    transition: color 0.2s;
  }

  .cart-drawer__close:hover {
    color: #c9a227;
  }

  .cart-drawer__body {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
  }

  .cart-drawer__items {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .cart-drawer__item {
    display: flex;
    gap: 15px;
    padding: 15px 0;
    border-bottom: 1px solid #eee;
  }

  .cart-drawer__item:last-child {
    border-bottom: none;
  }

  .cart-drawer__item-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    border-radius: 6px;
    overflow: hidden;
    background: #f8f8f8;
  }

  .cart-drawer__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-drawer__item-details {
    flex: 1;
    min-width: 0;
  }

  .cart-drawer__item-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
    display: block;
    margin-bottom: 4px;
  }

  .cart-drawer__item-title:hover {
    color: #c9a227;
    text-decoration: none;
  }

  .cart-drawer__item-variant {
    font-size: 1.3rem;
    color: #666;
    margin: 0 0 4px;
  }

  .cart-drawer__item-properties {
    margin-bottom: 6px;
  }

  .cart-drawer__item-property {
    font-size: 1.2rem;
    color: #888;
    margin: 0;
  }

  .cart-drawer__item-price {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .cart-drawer__item-actions {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .cart-drawer__quantity {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 4px;
    overflow: hidden;
  }

  .cart-drawer__qty-btn {
    background: #f8f8f8;
    border: none;
    width: 32px;
    height: 32px;
    cursor: pointer;
    font-size: 1.6rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
  }

  .cart-drawer__qty-btn:hover {
    background: #eee;
  }

  .cart-drawer__qty-input {
    width: 40px;
    height: 32px;
    border: none;
    text-align: center;
    font-size: 1.4rem;
    padding: 0;
    -moz-appearance: textfield;
  }

  .cart-drawer__qty-input::-webkit-outer-spin-button,
  .cart-drawer__qty-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .cart-drawer__remove {
    background: none;
    border: none;
    cursor: pointer;
    padding: 6px;
    color: #999;
    transition: color 0.2s;
  }

  .cart-drawer__remove:hover {
    color: #e53935;
  }

  /* Empty state */
  .cart-drawer__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .cart-drawer__empty svg {
    margin-bottom: 20px;
    opacity: 0.4;
  }

  .cart-drawer__empty p {
    font-size: 1.6rem;
    margin-bottom: 20px;
  }

  /* Footer */
  .cart-drawer__footer {
    padding: 20px;
    border-top: 1px solid #eee;
    background: #fafafa;
  }

  .cart-drawer__note {
    margin-bottom: 15px;
  }

  .cart-drawer__note label {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 8px;
    display: block;
  }

  .cart-drawer__note textarea {
    width: 100%;
    height: 60px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1.4rem;
    resize: none;
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .cart-drawer__shipping-note {
    font-size: 1.3rem;
    color: #666;
    margin: 0 0 15px;
  }

  .cart-drawer__checkout {
    width: 100%;
    margin-bottom: 10px;
    padding: 14px 24px;
  }

  .cart-drawer__view-cart {
    width: 100%;
    padding: 12px 24px;
  }

  /* Loading state */
  .cart-drawer.is-loading .cart-drawer__body {
    opacity: 0.5;
    pointer-events: none;
  }

  .cart-drawer__loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;
  }

  .cart-drawer.is-loading .cart-drawer__loading {
    display: block;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .cart-drawer__spinner {
    width: 30px;
    height: 30px;
    border: 3px solid #eee;
    border-top-color: #c9a227;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
</style>

<script>
(function() {
  const drawer = document.getElementById('cart-drawer');
  if (!drawer) return;

  const overlay = drawer.querySelector('.cart-drawer__overlay');
  const closeBtn = drawer.querySelectorAll('[data-cart-drawer-close]');
  const body = document.body;

  // Open/Close functions
  window.openCartDrawer = function() {
    drawer.classList.add('is-open');
    body.style.overflow = 'hidden';
    drawer.setAttribute('aria-hidden', 'false');
    drawer.querySelector('.cart-drawer__close').focus();
  };

  window.closeCartDrawer = function() {
    drawer.classList.remove('is-open');
    body.style.overflow = '';
    drawer.setAttribute('aria-hidden', 'true');
  };

  // Close button handlers
  closeBtn.forEach(btn => {
    btn.addEventListener('click', window.closeCartDrawer);
  });

  // Keyboard handling
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && drawer.classList.contains('is-open')) {
      window.closeCartDrawer();
    }
  });

  // Intercept add to cart forms
  document.addEventListener('submit', async (e) => {
    const form = e.target;
    if (!form.matches('form[action="/cart/add"]')) return;

    e.preventDefault();

    const formData = new FormData(form);
    const submitBtn = form.querySelector('[type="submit"]');
    const originalText = submitBtn ? submitBtn.textContent : '';

    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Adding...';
    }

    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      });

      if (response.ok) {
        await updateCartDrawer();
        window.openCartDrawer();
      } else {
        const data = await response.json();
        alert(data.description || 'Could not add item to cart');
      }
    } catch (error) {
      console.error('Error adding to cart:', error);
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    }
  });

  // Update cart drawer contents
  async function updateCartDrawer() {
    drawer.classList.add('is-loading');

    try {
      const response = await fetch('/?sections=cart-drawer');
      const data = await response.json();

      if (data['cart-drawer']) {
        const temp = document.createElement('div');
        temp.innerHTML = data['cart-drawer'];

        const newBody = temp.querySelector('.cart-drawer__body');
        const newFooter = temp.querySelector('.cart-drawer__footer');
        const newCount = temp.querySelector('[data-cart-count]');

        if (newBody) {
          drawer.querySelector('.cart-drawer__body').innerHTML = newBody.innerHTML;
        }

        const currentFooter = drawer.querySelector('.cart-drawer__footer');
        if (newFooter && currentFooter) {
          currentFooter.innerHTML = newFooter.innerHTML;
        } else if (newFooter && !currentFooter) {
          drawer.querySelector('.cart-drawer__content').appendChild(newFooter.cloneNode(true));
        } else if (!newFooter && currentFooter) {
          currentFooter.remove();
        }

        if (newCount) {
          document.querySelectorAll('[data-cart-count]').forEach(el => {
            el.textContent = newCount.textContent;
          });
        }

        // Update header cart count
        const cartCount = temp.querySelector('[data-cart-count]')?.textContent || '0';
        document.querySelectorAll('.header__cart-count').forEach(el => {
          el.textContent = cartCount;
        });

        // Re-attach event listeners
        attachCartItemListeners();
      }
    } catch (error) {
      console.error('Error updating cart:', error);
    } finally {
      drawer.classList.remove('is-loading');
    }
  }

  // Attach event listeners to cart items
  function attachCartItemListeners() {
    // Quantity buttons
    drawer.querySelectorAll('[data-qty-change]').forEach(btn => {
      btn.addEventListener('click', async () => {
        const line = btn.dataset.line;
        const change = parseInt(btn.dataset.qtyChange);
        const input = drawer.querySelector(`.cart-drawer__qty-input[data-line="${line}"]`);
        const newQty = Math.max(1, Math.min(99, parseInt(input.value) + change));

        await updateCartQuantity(line, newQty);
      });
    });

    // Quantity input change
    drawer.querySelectorAll('.cart-drawer__qty-input').forEach(input => {
      input.addEventListener('change', async () => {
        const line = input.dataset.line;
        const newQty = Math.max(1, Math.min(99, parseInt(input.value) || 1));
        await updateCartQuantity(line, newQty);
      });
    });

    // Remove buttons
    drawer.querySelectorAll('[data-remove-item]').forEach(btn => {
      btn.addEventListener('click', async () => {
        const line = btn.dataset.line;
        await updateCartQuantity(line, 0);
      });
    });

    // Order note
    const noteTextarea = drawer.querySelector('#cart-note');
    if (noteTextarea) {
      let noteTimeout;
      noteTextarea.addEventListener('input', () => {
        clearTimeout(noteTimeout);
        noteTimeout = setTimeout(async () => {
          await fetch('/cart/update.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ note: noteTextarea.value })
          });
        }, 500);
      });
    }
  }

  // Update cart quantity
  async function updateCartQuantity(line, quantity) {
    drawer.classList.add('is-loading');

    try {
      await fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ line: parseInt(line), quantity: quantity })
      });

      await updateCartDrawer();
    } catch (error) {
      console.error('Error updating cart:', error);
    }
  }

  // Initial attachment
  attachCartItemListeners();

  // Expose update function globally
  window.updateCartDrawer = updateCartDrawer;
})();
</script>

{% schema %}
{
  "name": "Cart Drawer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_order_note",
      "label": "Show order note field",
      "default": true
    }
  ]
}
{% endschema %}
