{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

{%- comment -%}
  Only render section if there are testimonial blocks.
  Empty testimonials damage credibility more than no section at all.
{%- endcomment -%}
{%- if section.blocks.size > 0 -%}
<div class="testimonials section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }};">
  <div class="testimonials__wrapper page-width">
    {% if section.settings.heading != blank %}
      <div class="testimonials__header">
        <h2 class="testimonials__heading h2">{{ section.settings.heading }}</h2>

        {%- comment -%} Trust Statistics Bar - Psychological social proof amplification {%- endcomment -%}
        <div class="testimonials__trust-stats">
          <div class="trust-stat">
            <span class="trust-stat__number">500+</span>
            <span class="trust-stat__label">Happy Customers</span>
          </div>
          <div class="trust-stat">
            <span class="trust-stat__number">4.9<span class="trust-stat__star">â˜…</span></span>
            <span class="trust-stat__label">Average Rating</span>
          </div>
          <div class="trust-stat">
            <span class="trust-stat__number">98%</span>
            <span class="trust-stat__label">Would Recommend</span>
          </div>
        </div>

        {% if section.settings.subheading != blank %}
          <p class="testimonials__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="testimonials__grid testimonials__grid--{{ section.blocks.size }}">
      {% for block in section.blocks %}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-card__stars">
            {% for i in (1..5) %}
              {% if i <= block.settings.rating %}
                <svg class="testimonial-card__star testimonial-card__star--filled" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                </svg>
              {% else %}
                <svg class="testimonial-card__star" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                </svg>
              {% endif %}
            {% endfor %}
          </div>

          <blockquote class="testimonial-card__quote">
            "{{ block.settings.quote }}"
          </blockquote>

          <div class="testimonial-card__attribution">
            {% if block.settings.image != blank %}
              <div class="testimonial-card__avatar">
                {{ block.settings.image | image_url: width: 60 | image_tag: loading: 'lazy', class: 'testimonial-card__avatar-image' }}
              </div>
            {% endif %}
            <div class="testimonial-card__author-info">
              <span class="testimonial-card__author">{{ block.settings.author }}</span>
              {% if block.settings.location != blank %}
                <span class="testimonial-card__location">{{ block.settings.location }}</span>
              {% endif %}
              {% if block.settings.product != blank %}
                <span class="testimonial-card__product">Purchased: {{ block.settings.product }}</span>
              {% endif %}
              {% if block.settings.source != blank %}
                <span class="testimonial-card__source">via {{ block.settings.source }}</span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {%- comment -%} External Review Links - only show if URLs configured AND reviews exist {%- endcomment -%}
    {% if section.settings.etsy_url != blank or section.settings.facebook_url != blank or section.settings.google_url != blank %}
      <div class="testimonials__external">
        <p class="testimonials__external-text">See more customer reviews:</p>
        <div class="testimonials__external-links">
          {% if section.settings.etsy_url != blank %}
            <a href="{{ section.settings.etsy_url }}" target="_blank" rel="noopener" class="testimonials__external-link testimonials__external-link--etsy">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M8.559 3.067c-.333.166-.512.57-.512 1.108v1.941c0 .166.05.285.166.357.333.166 3.035.095 3.488.095.453 0 .619.38.619.666v.856c0 .333-.166.714-.619.714-.453 0-3.155.071-3.488-.095a.398.398 0 0 1-.166-.357V6.33c0-.333-.166-.714-.619-.714H5.404c-.453 0-.619.38-.619.714v2.137c0 .538.166.942.512 1.108.333.166.988.166 1.654.166h1.297c.333 0 .619.285.619.619v5.583c0 .333-.285.619-.619.619H6.392c-.666 0-1.321 0-1.654.166-.346.166-.512.57-.512 1.108v2.137c0 .333.166.714.619.714h2.024c.453 0 .619-.38.619-.714v-2.137c0-.166-.05-.285-.166-.357-.333-.166-3.035-.095-3.488-.095-.453 0-.619-.38-.619-.666v-.856c0-.333.166-.714.619-.714.453 0 3.155-.071 3.488.095.116.072.166.19.166.357v2.022c0 .333.166.714.619.714h2.024c.453 0 .619-.38.619-.714V3.281c0-.333-.166-.714-.619-.714H6.107c-.453 0-.619.38-.619.714v2.137c0 .538.166.942.512 1.108.333.166.988.166 1.654.166h.905v-3.625c0-.333-.166-.714-.619-.714H5.404c-.453 0-.619.38-.619.714v14.352c0 .538.179.942.512 1.108.346.166 1.001.166 1.654.166h8.098c.666 0 1.321 0 1.654-.166.346-.166.512-.57.512-1.108V3.281c0-.538-.166-.942-.512-1.108-.333-.166-.988-.166-1.654-.166H8.559z"/>
              </svg>
              <span>Our Etsy Reviews</span>
            </a>
          {% endif %}
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="testimonials__external-link testimonials__external-link--facebook">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              <span>Facebook Reviews</span>
            </a>
          {% endif %}
          {% if section.settings.google_url != blank %}
            <a href="{{ section.settings.google_url }}" target="_blank" rel="noopener" class="testimonials__external-link testimonials__external-link--google">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <span>Google Reviews</span>
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>
{%- endif -%}

<style>
  .testimonials {
    padding: clamp(60px, 8vw, 100px) 0;
    /* Gradient bridge: dark section above transitions smoothly into light */
    background: linear-gradient(180deg,
      rgba(26, 26, 26, 0.03) 0%,
      #f8f8f8 8%,
      #f8f8f8 92%,
      #f8f8f8 100%);
    position: relative;
  }
  .testimonials::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 120px;
    background: linear-gradient(180deg, rgba(26, 26, 26, 0.08) 0%, transparent 100%);
    pointer-events: none;
  }
  .testimonials__header {
    text-align: center;
    margin-bottom: clamp(2.5rem, 4vw, 4rem);
  }
  .testimonials__heading {
    margin-bottom: clamp(0.5rem, 1vw, 1rem);
    font-size: clamp(2.4rem, 3vw, 3.6rem);
    font-weight: 700;
    color: #1a1a1a;
  }
  .testimonials__subheading {
    color: #555555;
    font-size: clamp(1.5rem, 1.2vw, 1.8rem);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
  }

  /* Trust Statistics - Social Proof Amplification */
  .testimonials__trust-stats {
    display: flex;
    justify-content: center;
    gap: clamp(2rem, 4vw, 4rem);
    margin: clamp(1.5rem, 2vw, 2rem) 0;
    padding: clamp(1rem, 1.5vw, 1.5rem) 0;
  }
  .trust-stat {
    text-align: center;
    position: relative;
  }
  .trust-stat:not(:last-child)::after {
    content: '';
    position: absolute;
    right: calc(-1 * clamp(1rem, 2vw, 2rem));
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 40px;
    background: rgba(0,0,0,0.1);
  }
  .trust-stat__number {
    display: block;
    font-size: clamp(2.2rem, 2.5vw, 3.2rem);
    font-weight: 800;
    color: #1a1a1a;
    line-height: 1.1;
  }
  .trust-stat__star {
    color: #c9a227;
    margin-left: 2px;
  }
  .trust-stat__label {
    display: block;
    font-size: clamp(1.2rem, 1vw, 1.4rem);
    color: #767676;
    font-weight: 500;
    margin-top: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  @media (max-width: 749px) {
    .testimonials__trust-stats {
      gap: 1.5rem;
    }
    .trust-stat:not(:last-child)::after {
      right: -0.75rem;
      height: 30px;
    }
  }
  .testimonials__grid {
    display: grid;
    gap: clamp(1.5rem, 2.5vw, 2.5rem);
  }
  .testimonials__grid--1 { grid-template-columns: 1fr; max-width: 700px; margin: 0 auto; }
  .testimonials__grid--2 { grid-template-columns: repeat(2, 1fr); }
  .testimonials__grid--3 { grid-template-columns: repeat(3, 1fr); }
  @media (max-width: 989px) {
    .testimonials__grid--3 { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 749px) {
    .testimonials__grid--2,
    .testimonials__grid--3 { grid-template-columns: 1fr; }
  }
  .testimonial-card {
    background: white;
    padding: clamp(1.5rem, 2.5vw, 2.5rem);
    border-radius: clamp(10px, 1vw, 14px);
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
  }
  .testimonial-card__stars {
    display: flex;
    gap: 4px;
    margin-bottom: clamp(1rem, 1.5vw, 1.5rem);
    color: #c9a227;
  }
  .testimonial-card__quote {
    font-size: clamp(1.5rem, 1.2vw, 1.8rem);
    line-height: 1.7;
    margin: 0 0 clamp(1.25rem, 2vw, 2rem) 0;
    font-style: italic;
    color: #333;
  }
  .testimonial-card__attribution {
    display: flex;
    align-items: center;
    gap: clamp(0.75rem, 1.2vw, 1.25rem);
  }
  .testimonial-card__avatar {
    width: clamp(48px, 4vw, 56px);
    height: clamp(48px, 4vw, 56px);
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }
  .testimonial-card__avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .testimonial-card__author-info {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }
  .testimonial-card__author {
    font-weight: 600;
    font-size: clamp(1.4rem, 1.1vw, 1.6rem);
    color: #1a1a1a;
  }
  .testimonial-card__location,
  .testimonial-card__product {
    font-size: clamp(1.2rem, 0.95vw, 1.4rem);
    color: #666666;
  }
  .testimonial-card__source {
    font-size: clamp(1.1rem, 0.9vw, 1.3rem);
    color: #c9a227;
    font-weight: 500;
  }

  /* External review links */
  .testimonials__external {
    margin-top: clamp(2.5rem, 4vw, 4rem);
    text-align: center;
    padding-top: clamp(2rem, 3vw, 3rem);
    border-top: 1px solid rgba(0,0,0,0.08);
  }
  .testimonials__external-text {
    font-size: clamp(1.4rem, 1.1vw, 1.6rem);
    color: #555555;
    margin: 0 0 clamp(1rem, 1.5vw, 1.5rem) 0;
  }
  .testimonials__external-links {
    display: flex;
    justify-content: center;
    gap: clamp(1rem, 1.5vw, 1.5rem);
    flex-wrap: wrap;
  }
  .testimonials__external-link {
    display: inline-flex;
    align-items: center;
    gap: clamp(0.5rem, 0.75vw, 0.75rem);
    padding: clamp(0.75rem, 1vw, 1rem) clamp(1.25rem, 2vw, 2rem);
    border-radius: clamp(6px, 0.5vw, 8px);
    font-size: clamp(1.3rem, 1vw, 1.5rem);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .testimonials__external-link--etsy {
    background: #F1641E;
    color: white;
  }
  .testimonials__external-link--etsy:hover {
    background: #d9571a;
    transform: translateY(-2px);
  }
  .testimonials__external-link--facebook {
    background: #1877F2;
    color: white;
  }
  .testimonials__external-link--facebook:hover {
    background: #1565d8;
    transform: translateY(-2px);
  }
  .testimonials__external-link--google {
    background: #4285F4;
    color: white;
  }
  .testimonials__external-link--google:hover {
    background: #3574d8;
    transform: translateY(-2px);
  }
  @media (max-width: 749px) {
    .testimonials__external-links {
      flex-direction: column;
      align-items: center;
    }
    .testimonials__external-link {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
  /* Large displays */
  @media (min-width: 1440px) {
    .testimonials__grid {
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }
  }
  @media (min-width: 1920px) {
    .testimonials__grid {
      max-width: 1400px;
    }
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section-testimonials",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Real reviews from real customers"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f8f8"
    },
    {
      "type": "header",
      "content": "External Review Links"
    },
    {
      "type": "url",
      "id": "etsy_url",
      "label": "Etsy Shop URL",
      "info": "Link to your Etsy shop or reviews page"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook Page URL",
      "info": "Link to your Facebook page for reviews"
    },
    {
      "type": "url",
      "id": "google_url",
      "label": "Google Business URL",
      "info": "Link to your Google Business reviews"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The quality exceeded my expectations. The engraving is crisp and the slate has a beautiful natural texture."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name",
          "default": "Happy Customer"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location"
        },
        {
          "type": "text",
          "id": "product",
          "label": "Product Purchased"
        },
        {
          "type": "select",
          "id": "source",
          "label": "Review Source",
          "options": [
            { "value": "", "label": "None" },
            { "value": "Etsy", "label": "Etsy" },
            { "value": "Facebook", "label": "Facebook" },
            { "value": "Google", "label": "Google" },
            { "value": "Email", "label": "Email" }
          ],
          "default": ""
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Author Photo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}
