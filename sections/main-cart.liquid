<div class="cart-page">
  <div class="cart-page__container">
    {%- if cart.item_count > 0 -%}
      <form action="{{ routes.cart_url }}" method="post" class="cart-form">
        <div class="cart-layout">
          <!-- Cart Items Column -->
          <div class="cart-main">
            <header class="cart-header">
              <h1 class="cart-header__title">Your Cart</h1>
              <span class="cart-header__count">{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}</span>
            </header>

            <div class="cart-items">
              {%- for item in cart.items -%}
                <div class="cart-item" data-key="{{ item.key }}">
                  <div class="cart-item__media">
                    {%- if item.image -%}
                      <a href="{{ item.url }}" class="cart-item__image-link">
                        {{ item.image | image_url: width: 200 | image_tag: loading: 'lazy', alt: item.title, class: 'cart-item__image' }}
                      </a>
                    {%- endif -%}
                  </div>

                  <div class="cart-item__content">
                    <div class="cart-item__details">
                      <h3 class="cart-item__title">
                        <a href="{{ item.url }}">{{ item.product.title }}</a>
                      </h3>

                      {%- if item.variant.title != 'Default Title' -%}
                        <p class="cart-item__variant">{{ item.variant.title }}</p>
                      {%- endif -%}

                      {%- if item.properties.size > 0 -%}
                        <div class="cart-item__properties">
                          {%- for property in item.properties -%}
                            {%- unless property.last == blank or property.first contains '_' -%}
                              <p class="cart-item__property">
                                <span class="cart-item__property-label">{{ property.first }}:</span>
                                <span class="cart-item__property-value">{{ property.last }}</span>
                              </p>
                            {%- endunless -%}
                          {%- endfor -%}
                        </div>
                      {%- endif -%}

                      <div class="cart-item__price-mobile">
                        {{ item.line_price | money }}
                      </div>
                    </div>

                    <div class="cart-item__actions">
                      <div class="cart-item__quantity">
                        <button type="button" class="cart-item__qty-btn cart-item__qty-btn--minus" aria-label="Decrease quantity" onclick="this.nextElementSibling.stepDown(); this.form.submit();">
                          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <line x1="5" y1="12" x2="19" y2="12"/>
                          </svg>
                        </button>
                        <input
                          type="number"
                          id="quantity-{{ item.key }}"
                          name="updates[{{ item.key }}]"
                          value="{{ item.quantity }}"
                          min="0"
                          class="cart-item__qty-input"
                          aria-label="Quantity"
                        >
                        <button type="button" class="cart-item__qty-btn cart-item__qty-btn--plus" aria-label="Increase quantity" onclick="this.previousElementSibling.stepUp(); this.form.submit();">
                          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <line x1="12" y1="5" x2="12" y2="19"/>
                            <line x1="5" y1="12" x2="19" y2="12"/>
                          </svg>
                        </button>
                      </div>

                      <a href="{{ item.url_to_remove }}" class="cart-item__remove" aria-label="Remove {{ item.title }}">
                        Remove
                      </a>
                    </div>
                  </div>

                  <div class="cart-item__price">
                    {{ item.line_price | money }}
                  </div>
                </div>
              {%- endfor -%}
            </div>

            <div class="cart-continue">
              <a href="/collections/all" class="cart-continue__link">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="19" y1="12" x2="5" y2="12"/>
                  <polyline points="12 19 5 12 12 5"/>
                </svg>
                Continue Shopping
              </a>
            </div>
          </div>

          <!-- Order Summary Column -->
          <aside class="cart-summary">
            <div class="cart-summary__inner">
              <h2 class="cart-summary__title">Order Summary</h2>

              <div class="cart-summary__rows">
                <div class="cart-summary__row">
                  <span>Subtotal</span>
                  <span>{{ cart.total_price | money }}</span>
                </div>
                <div class="cart-summary__row cart-summary__row--muted">
                  <span>Shipping</span>
                  <span>Calculated at checkout</span>
                </div>
              </div>

              {%- assign free_shipping_threshold = 7500 -%}
              {%- assign remaining = free_shipping_threshold | minus: cart.total_price -%}
              <div class="cart-shipping-bar">
                {%- if remaining > 0 -%}
                  <p class="cart-shipping-bar__text">
                    Add <strong>{{ remaining | money }}</strong> more for free shipping
                  </p>
                  {%- assign progress = cart.total_price | times: 100 | divided_by: free_shipping_threshold -%}
                {%- else -%}
                  <p class="cart-shipping-bar__text cart-shipping-bar__text--success">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    You've unlocked free shipping!
                  </p>
                  {%- assign progress = 100 -%}
                {%- endif -%}
                <div class="cart-shipping-bar__track">
                  <div class="cart-shipping-bar__fill" style="width: {{ progress }}%"></div>
                </div>
              </div>

              <div class="cart-summary__total">
                <span>Estimated Total</span>
                <span>{{ cart.total_price | money }}</span>
              </div>

              <div class="cart-summary__actions">
                <button type="submit" name="checkout" class="cart-checkout-btn">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                  </svg>
                  Checkout
                </button>
                <button type="submit" name="update" class="cart-update-btn">
                  Update Cart
                </button>
              </div>

              <!-- Trust Badges -->
              <div class="cart-trust">
                <div class="cart-trust__item">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  </svg>
                  <span>Secure Checkout</span>
                </div>
                <div class="cart-trust__item">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="1" y="3" width="15" height="13"/>
                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                    <circle cx="5.5" cy="18.5" r="2.5"/>
                    <circle cx="18.5" cy="18.5" r="2.5"/>
                  </svg>
                  <span>Free Shipping $75+</span>
                </div>
                <div class="cart-trust__item">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                  <span>Michigan Made</span>
                </div>
              </div>

              <!-- Payment Icons -->
              <div class="cart-payments">
                <span class="cart-payments__label">We Accept</span>
                <div class="cart-payments__icons">
                  <svg viewBox="0 0 38 24" width="38" height="24" role="img" aria-labelledby="visa"><title id="visa">Visa</title><path fill="#fff" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><path fill="#142688" d="M14.2 8l-1.3 8.1h2.1l1.3-8.1h-2.1zm6.5 0l-2 5.5-.8-4.2c-.1-.5-.5-.8-1-.8h-3.4l-.1.4c.8.2 1.7.5 2.2.8.3.2.4.4.5.7l1.5 5.1h2.2l3.4-8.3h-2.5v.8zm7.3 5.2c0-1.3-1.5-1.7-2.4-2-.5-.2-1-.4-1-.7 0-.3.4-.5.9-.5.7 0 1.5.2 1.9.4l.4-1.8c-.6-.2-1.4-.4-2.3-.4-2.1 0-3.6 1.1-3.6 2.6 0 1.2 1.1 1.8 1.9 2.2.8.4 1.1.7 1.1 1.1 0 .6-.7.8-1.3.8-.9 0-1.8-.3-2.3-.5l-.4 1.8c.7.3 1.6.5 2.6.5 2.3 0 3.8-1.1 3.8-2.7l-.3.2zm5.7-5.2h-1.6c-.5 0-.9.3-1.1.7l-3.1 7.4h2.2l.4-1.2h2.7l.3 1.2H35L33.7 8zm-2.4 5.2l1.1-3 .6 3h-1.7z"/></svg>
                  <svg viewBox="0 0 38 24" width="38" height="24" role="img" aria-labelledby="mc"><title id="mc">Mastercard</title><path fill="#fff" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><circle fill="#EB001B" cx="15" cy="12" r="7"/><circle fill="#F79E1B" cx="23" cy="12" r="7"/><path fill="#FF5F00" d="M19 6.6c1.4 1.2 2.3 3 2.3 5s-.9 3.8-2.3 5c-1.4-1.2-2.3-3-2.3-5s.9-3.8 2.3-5z"/></svg>
                  <svg viewBox="0 0 38 24" width="38" height="24" role="img" aria-labelledby="amex"><title id="amex">American Express</title><path fill="#006FCF" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><path fill="#fff" d="M12 10.2l-.8 2h1.6l-.8-2zm16.6-.4v1.1h2.3v1.3h-2.3v1.2h2.5l1.2-1.8-1.1-1.8h-2.6zM35 12l2-2.8h-2.3l-1.1 1.7-1.2-1.7h-6.4v.5c-.4-.4-1-.5-1.6-.5h-4.3l-.9 2.1-.9-2.1h-3.5v.5c-.4-.4-.9-.5-1.5-.5H9.2l-2 4.8H5l2.8-6.3h3.4l2.7 6.3h3.5l.4-1h2.6l.4 1h6.8v-1.5l.6 1.5h3.5l.6-1.5v1.5H35V12z"/></svg>
                  <svg viewBox="0 0 38 24" width="38" height="24" role="img" aria-labelledby="paypal"><title id="paypal">PayPal</title><path fill="#fff" d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.3 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.3-3-3-3z"/><path fill="#003087" d="M23.9 8.3c.2-1.4-.3-2.4-1.1-3.1-.9-.8-2.3-1.2-4.2-1.2h-5.5c-.4 0-.7.3-.8.7L10 18.6c0 .3.2.5.5.5h3.6l.9-5.6v.2c.1-.4.4-.7.8-.7h1.6c3.3 0 5.9-1.3 6.7-5.2v-.5z"/><path fill="#3086C8" d="M24 8.3v.4c-.8 4-3.4 5.3-6.7 5.3h-1.6c-.4 0-.7.3-.8.7l-.8 5.1-.2 1.3c0 .2.1.4.4.4h2.8c.3 0 .6-.3.7-.6l.6-3.1c.1-.3.4-.6.7-.6h.4c2.9 0 5.1-1.2 5.8-4.5.3-1.4.1-2.6-.7-3.4h-.6z"/></svg>
                </div>
              </div>
            </div>
          </aside>
        </div>
      </form>

    {%- else -%}
      <!-- Premium Empty Cart State -->
      <div class="cart-empty">
        <div class="cart-empty__icon">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
        </div>
        <h1 class="cart-empty__title">Your cart is empty</h1>
        <p class="cart-empty__text">Discover our collection of premium laser-engraved products, crafted with precision in Michigan.</p>
        <a href="/collections/all" class="cart-empty__cta">
          Start Shopping
        </a>
        <div class="cart-empty__features">
          <div class="cart-empty__feature">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="1" y="3" width="15" height="13"/>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
              <circle cx="5.5" cy="18.5" r="2.5"/>
              <circle cx="18.5" cy="18.5" r="2.5"/>
            </svg>
            <span>Free Shipping Over $75</span>
          </div>
          <div class="cart-empty__feature">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>Design Proof in 24-48hrs</span>
          </div>
          <div class="cart-empty__feature">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            <span>Quality Guaranteed</span>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  /* ==========================================
     TESLA/RIVIAN INSPIRED PREMIUM CART
     ========================================== */

  .cart-page {
    background: #0d0d0d;
    min-height: 100vh;
    padding: 0;
  }

  .cart-page__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem 8rem;
  }

  /* ==========================================
     CART LAYOUT - Two Column
     ========================================== */

  .cart-layout {
    display: grid;
    grid-template-columns: 1fr 420px;
    gap: 4rem;
    align-items: start;
  }

  @media (max-width: 1024px) {
    .cart-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  /* ==========================================
     CART HEADER
     ========================================== */

  .cart-header {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .cart-header__title {
    font-size: 3.2rem;
    font-weight: 400;
    letter-spacing: -0.03em;
    color: #ffffff;
    margin: 0;
  }

  .cart-header__count {
    font-size: 1.6rem;
    color: rgba(255,255,255,0.5);
    font-weight: 400;
  }

  /* ==========================================
     CART ITEMS
     ========================================== */

  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .cart-item {
    display: grid;
    grid-template-columns: 120px 1fr auto;
    gap: 2rem;
    padding: 2rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.08);
    transition: background 0.2s ease;
  }

  .cart-item:first-child {
    padding-top: 0;
  }

  .cart-item__media {
    position: relative;
  }

  .cart-item__image {
    width: 100%;
    height: auto;
    border-radius: 16px;
    background: #1a1a1a;
    transition: transform 0.3s ease;
  }

  .cart-item__image-link:hover .cart-item__image {
    transform: scale(1.02);
  }

  .cart-item__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100%;
  }

  .cart-item__title {
    font-size: 1.8rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .cart-item__title a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.2s;
  }

  .cart-item__title a:hover {
    color: #c9a227;
  }

  .cart-item__variant {
    font-size: 1.4rem;
    color: rgba(255,255,255,0.6);
    margin: 0 0 0.5rem;
  }

  .cart-item__properties {
    margin-top: 0.5rem;
  }

  .cart-item__property {
    font-size: 1.3rem;
    color: rgba(255,255,255,0.5);
    margin: 0.25rem 0;
  }

  .cart-item__property-label {
    color: rgba(255,255,255,0.4);
  }

  .cart-item__property-value {
    color: rgba(255,255,255,0.7);
  }

  .cart-item__price-mobile {
    display: none;
    font-size: 1.6rem;
    font-weight: 600;
    color: #ffffff;
    margin-top: 0.75rem;
  }

  .cart-item__actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: auto;
    padding-top: 1rem;
  }

  /* Quantity Controls - Rivian Style */
  .cart-item__quantity {
    display: flex;
    align-items: center;
    background: rgba(255,255,255,0.05);
    border-radius: 50px;
    padding: 0.25rem;
  }

  .cart-item__qty-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    border-radius: 50%;
    color: rgba(255,255,255,0.7);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .cart-item__qty-btn:hover {
    background: rgba(255,255,255,0.1);
    color: #ffffff;
  }

  .cart-item__qty-input {
    width: 40px;
    text-align: center;
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 500;
    -moz-appearance: textfield;
  }

  .cart-item__qty-input::-webkit-outer-spin-button,
  .cart-item__qty-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .cart-item__remove {
    font-size: 1.3rem;
    color: rgba(255,255,255,0.4);
    text-decoration: none;
    transition: color 0.2s;
  }

  .cart-item__remove:hover {
    color: #ef4444;
  }

  .cart-item__price {
    font-size: 1.8rem;
    font-weight: 600;
    color: #ffffff;
    text-align: right;
    padding-top: 0.25rem;
  }

  @media (max-width: 600px) {
    .cart-item {
      grid-template-columns: 90px 1fr;
      gap: 1.25rem;
    }

    .cart-item__price {
      display: none;
    }

    .cart-item__price-mobile {
      display: block;
    }

    .cart-item__title {
      font-size: 1.6rem;
    }
  }

  /* Continue Shopping Link */
  .cart-continue {
    margin-top: 2rem;
  }

  .cart-continue__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.4rem;
    color: rgba(255,255,255,0.6);
    text-decoration: none;
    transition: color 0.2s;
  }

  .cart-continue__link:hover {
    color: #c9a227;
  }

  /* ==========================================
     ORDER SUMMARY - Sticky Sidebar
     ========================================== */

  .cart-summary {
    position: sticky;
    top: 100px;
  }

  .cart-summary__inner {
    background: #161616;
    border-radius: 24px;
    padding: 2.5rem;
    border: 1px solid rgba(255,255,255,0.08);
  }

  .cart-summary__title {
    font-size: 2rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    color: #ffffff;
    margin: 0 0 2rem;
  }

  .cart-summary__rows {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.08);
    margin-bottom: 1.5rem;
  }

  .cart-summary__row {
    display: flex;
    justify-content: space-between;
    font-size: 1.5rem;
    color: #ffffff;
  }

  .cart-summary__row--muted {
    color: rgba(255,255,255,0.5);
    font-size: 1.4rem;
  }

  /* Free Shipping Progress Bar */
  .cart-shipping-bar {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }

  .cart-shipping-bar__text {
    font-size: 1.35rem;
    color: rgba(255,255,255,0.7);
    margin: 0 0 0.75rem;
    text-align: center;
  }

  .cart-shipping-bar__text strong {
    color: #c9a227;
  }

  .cart-shipping-bar__text--success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: #4ade80;
  }

  .cart-shipping-bar__text--success svg {
    stroke: #4ade80;
  }

  .cart-shipping-bar__track {
    height: 4px;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
    overflow: hidden;
  }

  .cart-shipping-bar__fill {
    height: 100%;
    background: linear-gradient(90deg, #c9a227, #d4b340);
    border-radius: 4px;
    transition: width 0.5s ease;
  }

  .cart-summary__total {
    display: flex;
    justify-content: space-between;
    font-size: 1.8rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 2rem;
  }

  /* Checkout Buttons */
  .cart-summary__actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .cart-checkout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1.25rem 2rem;
    background: #c9a227;
    color: #000000;
    font-size: 1.6rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .cart-checkout-btn svg {
    stroke: #000000;
  }

  .cart-checkout-btn:hover {
    background: #d4b340;
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(201, 162, 39, 0.3);
  }

  .cart-update-btn {
    width: 100%;
    padding: 1rem 2rem;
    background: transparent;
    color: rgba(255,255,255,0.7);
    font-size: 1.4rem;
    font-weight: 500;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 50px;
    cursor: pointer;
