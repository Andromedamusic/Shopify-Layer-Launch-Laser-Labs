{%- comment -%}
  Recently Viewed Products using localStorage
  Usage: {% render 'recently-viewed', product: product %}
{%- endcomment -%}

{% if product %}
  {%- comment -%} Track this product view {%- endcomment -%}
  <script>
    (function() {
      const RECENT_KEY = 'llll_recently_viewed';
      const MAX_ITEMS = 12;

      function getRecentlyViewed() {
        try {
          return JSON.parse(localStorage.getItem(RECENT_KEY)) || [];
        } catch {
          return [];
        }
      }

      function saveRecentlyViewed(items) {
        localStorage.setItem(RECENT_KEY, JSON.stringify(items));
      }

      // Add current product
      const currentProduct = {
        id: {{ product.id }},
        title: {{ product.title | json }},
        url: {{ product.url | json }},
        image: {{ product.featured_image | image_url: width: 400 | json }},
        price: {{ product.price | money | json }},
        viewedAt: Date.now()
      };

      let items = getRecentlyViewed();

      // Remove if already exists
      items = items.filter(item => item.id !== currentProduct.id);

      // Add to beginning
      items.unshift(currentProduct);

      // Keep only max items
      items = items.slice(0, MAX_ITEMS);

      saveRecentlyViewed(items);
    })();
  </script>
{% endif %}

<style>
  .recently-viewed {
    padding: 60px 0;
    background: #fafafa;
  }

  .recently-viewed__header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .recently-viewed__title {
    font-size: 2.4rem;
    margin: 0;
  }

  .recently-viewed__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  @media (max-width: 989px) {
    .recently-viewed__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 575px) {
    .recently-viewed__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  .recently-viewed__item {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .recently-viewed__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .recently-viewed__item-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .recently-viewed__item-image {
    aspect-ratio: 1;
    overflow: hidden;
    background: #f8f8f8;
  }

  .recently-viewed__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .recently-viewed__item:hover .recently-viewed__item-image img {
    transform: scale(1.05);
  }

  .recently-viewed__item-info {
    padding: 1rem;
  }

  .recently-viewed__item-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: #1a1a1a;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .recently-viewed__item-price {
    font-size: 1.4rem;
    color: #666;
  }

  .recently-viewed__empty {
    text-align: center;
    padding: 40px;
    color: #666;
  }

  .recently-viewed__clear {
    display: block;
    margin: 2rem auto 0;
    background: none;
    border: none;
    color: #666;
    font-size: 1.4rem;
    cursor: pointer;
    text-decoration: underline;
  }

  .recently-viewed__clear:hover {
    color: #1a1a1a;
  }
</style>

<section class="recently-viewed" id="recently-viewed-section" style="display: none;">
  <div class="page-width">
    <div class="recently-viewed__header">
      <h2 class="recently-viewed__title">Recently Viewed</h2>
    </div>
    <div class="recently-viewed__grid" id="recently-viewed-grid">
      <!-- Items populated by JavaScript -->
    </div>
    <button class="recently-viewed__clear" id="clear-recently-viewed">Clear History</button>
  </div>
</section>

<script>
(function() {
  const RECENT_KEY = 'llll_recently_viewed';
  const section = document.getElementById('recently-viewed-section');
  const grid = document.getElementById('recently-viewed-grid');
  const clearBtn = document.getElementById('clear-recently-viewed');

  if (!section || !grid) return;

  function getRecentlyViewed() {
    try {
      return JSON.parse(localStorage.getItem(RECENT_KEY)) || [];
    } catch {
      return [];
    }
  }

  function renderRecentlyViewed() {
    const items = getRecentlyViewed();

    // Don't show current product, filter it out
    const currentProductId = {{ product.id | default: 0 }};
    const filteredItems = items.filter(item => item.id !== currentProductId).slice(0, 4);

    if (filteredItems.length === 0) {
      section.style.display = 'none';
      return;
    }

    section.style.display = 'block';
    grid.innerHTML = filteredItems.map(item => `
      <div class="recently-viewed__item">
        <a href="${item.url}" class="recently-viewed__item-link">
          <div class="recently-viewed__item-image">
            <img src="${item.image}" alt="${item.title}" loading="lazy" width="400" height="400">
          </div>
          <div class="recently-viewed__item-info">
            <h3 class="recently-viewed__item-title">${item.title}</h3>
            <p class="recently-viewed__item-price">${item.price}</p>
          </div>
        </a>
      </div>
    `).join('');
  }

  // Clear button
  if (clearBtn) {
    clearBtn.addEventListener('click', function() {
      localStorage.removeItem(RECENT_KEY);
      section.style.display = 'none';
    });
  }

  // Render on load
  renderRecentlyViewed();

  // Expose for external use
  window.refreshRecentlyViewed = renderRecentlyViewed;
})();
</script>
